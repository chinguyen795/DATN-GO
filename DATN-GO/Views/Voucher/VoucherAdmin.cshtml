    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script>
        // Countdown Timer
        function startCountdown() {
            const endDate = new Date('2025-08-31 23:59:59').getTime();

            const timer = setInterval(() => {
                const now = new Date().getTime();
                const distance = endDate - now;

                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                document.getElementById('days').textContent = String(days).padStart(2, '0');
                document.getElementById('hours').textContent = String(hours).padStart(2, '0');
                document.getElementById('minutes').textContent = String(minutes).padStart(2, '0');
                document.getElementById('seconds').textContent = String(seconds).padStart(2, '0');

                if (distance < 0) {
                    clearInterval(timer);
                    document.getElementById('countdown').innerHTML = '<div class="col-12"><h3>🎉 Ưu đãi đã kết thúc! 🎉</h3></div>';
                }
            }, 1000);
        }

        // Copy voucher code
        function copyCode(code) {
            navigator.clipboard.writeText(code).then(() => {
                showToast(`Đã copy mã "${code}" vào clipboard!`, 'success');
            }).catch(() => {
                showToast('Không thể copy mã, vui lòng thử lại!', 'error');
            });
        }

        // Save voucher to user account
        function saveVoucher(voucherId, button) {
            const isAlreadySaved = button.classList.contains('saved');

            if (isAlreadySaved) {
                // Remove voucher
                button.innerHTML = '<i class="fas fa-heart"></i> Lưu';
                button.classList.remove('saved');
                showToast('Đã bỏ lưu voucher!', 'info');

                // API call to remove voucher
                console.log('Remove voucher from saved list:', voucherId);
                // fetch('/api/user-vouchers/remove', { method: 'DELETE', body: JSON.stringify({voucherId}) });
            } else {
                // Save voucher
                button.innerHTML = '<i class="fas fa-check"></i> Đã lưu';
                button.classList.add('saved');
                showToast('Đã lưu voucher vào tài khoản!', 'success');

                // API call to save voucher
                console.log('Save voucher to user account:', voucherId);

                // Sample voucher data to save
                const voucherData = {
                    voucherId: voucherId,
                    userId: getCurrentUserId(), // Get from auth context
                    savedAt: new Date().toISOString(),
                    status: 'Saved'
                };

                console.log('Voucher data to save:', voucherData);
                // fetch('/api/user-vouchers/save', { method: 'POST', body: JSON.stringify(voucherData) });
            }
        }

        // Filter vouchers by type
        function filterVouchers(type) {
            const vouchers = document.querySelectorAll('[data-type]');
            const buttons = document.querySelectorAll('.filter-btn');

            // Update active button
            buttons.forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');

            // Filter vouchers
            vouchers.forEach(voucher => {
                if (type === 'all' || voucher.dataset.type === type) {
                    voucher.style.display = 'block';
                    voucher.style.animation = 'slideInRight 0.6s ease forwards';
                } else {
                    voucher.style.display = 'none';
                }
            });
        }

        // Show floating voucher
        function showFloatingVoucher() {
            const floating = document.getElementById('floatingVoucher');
            floating.classList.remove('show');
            showToast('Voucher đặc biệt sẽ xuất hiện lại sau 10 giây!', 'info');

            setTimeout(() => {
                floating.classList.add('show');
            }, 10000);
        }

        // Show toast notification
        function showToast(message, type = 'info') {
            const toastContainer = document.querySelector('.toast-container');
            const toastId = 'toast_' + Date.now();

            const toastHtml = `
                <div class="toast show align-items-center text-white bg-${type === 'success' ? 'success' : type === 'error' ? 'danger' : 'info'} border-0" role="alert" id="${toastId}">
                    <div class="d-flex">
                        <div class="toast-body">
                            <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-triangle' : 'info-circle'} me-2"></i>
                            ${message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" onclick="document.getElementById('${toastId}').remove()"></button>
                    </div>
                </div>
            `;

            toastContainer.insertAdjacentHTML('beforeend', toastHtml);

            // Auto remove after 4 seconds
            setTimeout(() => {
                const toast = document.getElementById(toastId);
                if (toast) toast.remove();
            }, 4000);
        }

        // Get current user ID (mock function)
        function getCurrentUserId() {
            // In real implementation, get from authentication context
            return 123; // Mock user ID
        }

        // Load user's saved vouchers on page load
        function loadUserSavedVouchers() {
            // Mock saved vouchers - in real app, fetch from API
            const savedVoucherIds = [1, 4, 6]; // User has saved these vouchers

            savedVoucherIds.forEach(id => {
                const buttons = document.querySelectorAll(`button[onclick*="saveVoucher(${id}"]`);
                buttons.forEach(button => {
                    button.innerHTML = '<i class="fas fa-check"></i> Đã lưu';
                    button.classList.add('saved');
                });
            });

            console.log('Loaded saved vouchers:', savedVoucherIds);
            // fetch('/api/user-vouchers/saved').then(response => response.json()).then(data => { ... });
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            startCountdown();
            loadUserSavedVouchers();

            // Show floating voucher after 5 seconds
            setTimeout(() => {
                document.getElementById('floatingVoucher').classList.add('show');
            }, 5000);

            // Welcome message
            setTimeout(() => {
                showToast('Chào mừng bạn đến với trang voucher! 🎉', 'success');
            }, 1000);
        });

        // Handle responsive voucher interactions
        document.addEventListener('click', function(e) {
            if (e.target.closest('.voucher-card')) {
                const card = e.target.closest('.voucher-card');
                if (window.innerWidth <= 768 && !e.target.closest('.save-btn') && !e.target.closest('.voucher-code')) {
                    card.style.transform = 'scale(0.98)';
                    setTimeout(() => {
                        card.style.transform = '';
                    }, 150);
                }
            }
        });
    </script>
