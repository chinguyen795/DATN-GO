﻿@{
    ViewData["Title"] = "Voucher Page";
}

<div class="container-fluid">
    <div class="row">
        <!-- Left Sidebar -->
        <div class="col-lg-3 col-xl-2 d-none d-lg-block sidebar bg-white border-end">
            <div class="position-sticky" style="top: 1rem;">
                <div class="p-3 border-bottom">
                    <div class="d-flex align-items-center mb-3">
                        <img src="https://i.pinimg.com/736x/f0/cd/c4/f0cdc47ddb7f9dd5e86c3e7915c8b337.jpg" alt="Profile" class="rounded-circle me-2" style="width: 45px; height: 45px;">
                        <div>
                            <h6 class="mb-0">Nguyễn Văn A</h6>
                            <small class="text-muted">nguyenvana</small>
                        </div>
                    </div>
                </div>

                <ul class="nav flex-column p-3">
                    <li class="nav-item mb-2">
                        <a href="Profile.html" class="nav-link text-dark">
                            <i class="bi bi-person-circle me-2"></i>
                            Thông tin cá nhân
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="Orders.html" class="nav-link text-dark">
                            <i class="bi bi-box-seam me-2"></i>
                            Đơn hàng của tôi
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="Address.html" class="nav-link text-dark">
                            <i class="bi bi-geo-alt me-2"></i>
                            Địa chỉ
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="Vouchers.html" class="nav-link active text-danger">
                            <i class="bi bi-ticket-perforated me-2"></i>
                            Voucher
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="#" class="nav-link text-dark">
                            <i class="bi bi-bell me-2"></i>
                            Thông báo
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link text-dark">
                            <i class="bi bi-box-arrow-right me-2"></i>
                            Đăng xuất
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9 col-xl-10 p-4">
            <div class="bg-white p-4 rounded shadow-sm border border-danger">
                <h4 class="mb-4 text-danger">Voucher của tôi</h4>

                <!-- Voucher Status Tabs -->
                <ul class="nav nav-tabs mb-4">
                    <li class="nav-item">
                        <a class="nav-link active text-dark" href="#" data-voucher-tab="all">Tất cả</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-primary" href="#" data-voucher-tab="shop">Voucher Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-success" href="#" data-voucher-tab="floor">Voucher Sàn</a>
                    </li>
                </ul>

                <!-- Search Section -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Tìm kiếm voucher...">
                            <button class="btn btn-danger" type="button">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- All Vouchers Section -->
                <div class="vouchers-content" id="allVouchers">
                    <div class="row g-3">
                        <!-- Shop Voucher Example -->
                        <div class="col-12 col-md-6" data-voucher-type="shop">
                            <div class="border rounded p-3 d-flex align-items-center justify-content-between bg-light">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="text-danger" style="font-size: 2rem;">
                                        <i class="bi bi-ticket-perforated-fill"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-1">Giảm 20K</h6>
                                        <p class="text-muted small mb-0">Đơn tối thiểu ₫150K</p>
                                        <small class="text-danger">HSD: 30.04.2025</small>
                                        <div class="text-muted small">
                                            <i class="bi bi-shop"></i> Shop ABC
                                        </div>
                                    </div>
                                </div>
                                <button class="btn btn-outline-danger">Sử dụng</button>
                            </div>
                        </div>

                        <!-- Floor Voucher Example -->
                        <div class="col-12 col-md-6" data-voucher-type="floor">
                            <div class="border rounded p-3 d-flex align-items-center justify-content-between bg-light">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="text-success" style="font-size: 2rem;">
                                        <i class="bi bi-ticket-perforated-fill"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-1">Giảm 50K</h6>
                                        <p class="text-muted small mb-0">Đơn tối thiểu ₫500K</p>
                                        <small class="text-danger">HSD: 30.04.2025</small>
                                        <div class="text-muted small">
                                            <i class="bi bi-cart4"></i> Voucher Sàn
                                        </div>
                                    </div>
                                </div>
                                <button class="btn btn-outline-success">Sử dụng</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Shop Vouchers Section -->
                <div class="vouchers-content d-none" id="shopVouchers">
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <div class="border rounded p-3 d-flex align-items-center justify-content-between bg-light">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="text-danger" style="font-size: 2rem;">
                                        <i class="bi bi-ticket-perforated-fill"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-1">Giảm 20K</h6>
                                        <p class="text-muted small mb-0">Đơn tối thiểu ₫150K</p>
                                        <small class="text-danger">HSD: 30.04.2025</small>
                                        <div class="text-muted small">
                                            <i class="bi bi-shop"></i> Shop ABC
                                        </div>
                                    </div>
                                </div>
                                <button class="btn btn-outline-danger">Sử dụng</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Floor Vouchers Section -->
                <div class="vouchers-content d-none" id="floorVouchers">
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <div class="border rounded p-3 d-flex align-items-center justify-content-between bg-light">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="text-success" style="font-size: 2rem;">
                                        <i class="bi bi-ticket-perforated-fill"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-1">Giảm 50K</h6>
                                        <p class="text-muted small mb-0">Đơn tối thiểu ₫500K</p>
                                        <small class="text-danger">HSD: 30.04.2025</small>
                                        <div class="text-muted small">
                                            <i class="bi bi-cart4"></i> Voucher Sàn
                                        </div>
                                    </div>
                                </div>
                                <button class="btn btn-outline-success">Sử dụng</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>