@{
    ViewData["Title"] = "Voucher Page";
}

<div class="container-fluid">
    <div class="row">
        <!-- Left Sidebar -->
        <div class="col-lg-3 col-xl-2 d-none d-lg-block sidebar bg-white border-end">
            <div class="position-sticky" style="top: 1rem;">
                <div class="p-3 border-bottom">
                    <div class="d-flex align-items-center mb-3">
                        <img src="https://i.pinimg.com/736x/f0/cd/c4/f0cdc47ddb7f9dd5e86c3e7915c8b337.jpg" alt="Profile" class="rounded-circle me-2" style="width: 45px; height: 45px;">
                        <div>
                            <h6 class="mb-0">Nguyễn Văn A</h6>
                            <small class="text-muted">nguyenvana</small>
                        </div>
                    </div>
                </div>
                <ul class="nav flex-column p-3">
                    <li class="nav-item mb-2">
                        <a asp-controller="Profile" asp-action="Index" class="nav-link text-dark">
                            <i class="bi bi-person-circle me-2"></i> Thông tin cá nhân
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a asp-controller="Voucher" asp-action="Voucher" class="nav-link active text-danger">
                            <i class="bi bi-ticket-perforated me-2"></i> Voucher
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9 col-xl-10 p-4">
            <div class="bg-white p-4 rounded shadow-sm border border-danger">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="text-danger mb-0">Voucher của tôi</h4>
                    <a asp-action="Create" class="btn btn-danger" id="addVoucherBtn">

                        <i class="bi bi-plus-circle me-1"></i> Thêm Voucher
                    </a>
                </div>

                <!-- Tabs -->
                <ul class="nav nav-tabs mb-4" id="voucherTabs">
                    <li class="nav-item">
                        <a class="nav-link active" href="#" data-filter="all">Tất cả</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-filter="shop">Voucher Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-filter="admin">Voucher Sàn</a>
                    </li>

                </ul>

                <!-- Voucher List -->
                <div class="row g-3" id="voucherList">
                    @foreach (var voucher in Model)
                    {
                        var typeClass = voucher.Type?.ToLowerInvariant(); // "shop" hoặc "admin"
                        <div class="col-12 col-md-6 voucher-item" data-type="@typeClass">
                            <div class="border rounded p-3 d-flex align-items-center justify-content-between bg-light">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="fs-2 @(typeClass == "shop" ? "text-primary" : "text-success")">
                                        <i class="bi bi-ticket-perforated-fill"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-1">
                                            @{
                                                var isPercent = voucher.Reduce <= 100 && voucher.Reduce % 1000 != 0;
                                                var reduceValue = (int)voucher.Reduce; 
                                            }
                                            @if (isPercent)
                                            {
                                                @($"Giảm {reduceValue}%")
                                            }
                                            else
                                            {
                                                @($"Giảm {reduceValue:N0}đ")
                                            }
                                        </h6>

                                        <p class="text-muted small mb-0">Đơn tối thiểu: @voucher.MinOrder.ToString("N0")đ</p>
                                        <small class="text-danger">HSD: @voucher.EndDate.ToString("dd/MM/yyyy")</small>
                                        <div class="text-muted small mt-1">
                                            <i class="bi @(typeClass == "shop" ? "bi-shop" : "bi-cart4")"></i>
                                            @(typeClass == "shop" ? "Voucher Shop" : "Voucher Sàn")
                                        </div>
                                    </div>
                                </div>
                                <button class="btn btn-outline-danger">Sử dụng</button>
                                @if (voucher.Type?.ToLowerInvariant() == "shop")
                                {
                                    <form asp-action="Delete" asp-route-id="@voucher.Id" method="post" onsubmit="return confirm('Bạn có chắc muốn xoá voucher này không?');">
                                        <button type="submit" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-trash3"></i> Xoá
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const tabs = document.querySelectorAll('#voucherTabs a');
        const items = document.querySelectorAll('.voucher-item');
        const addBtn = document.getElementById('addVoucherBtn');

        function updateVoucherView(filter) {
            items.forEach(item => {
                const type = item.getAttribute('data-type'); // shop | admin
                if (filter === 'all' || type === filter) {
                    item.classList.remove('d-none');
                } else {
                    item.classList.add('d-none');
                }
            });

            // Chỉ hiện nút thêm ở tab Voucher Shop
            addBtn.classList.toggle('d-none', filter !== 'shop');
        }

        tabs.forEach(tab => {
            tab.addEventListener('click', function (e) {
                e.preventDefault();
                tabs.forEach(t => t.classList.remove('active'));
                this.classList.add('active');

                const filter = this.getAttribute('data-filter');
                updateVoucherView(filter);
            });
        });

        // Khi load trang ban đầu
        updateVoucherView("all");
    </script>
}

