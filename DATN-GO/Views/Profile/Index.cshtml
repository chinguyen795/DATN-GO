@using Google.Apis.Util
@using System.ComponentModel.DataAnnotations
@model DATN_GO.Models.Users
@{
    ViewData["Title"] = "Profile Page";
}
@{
    ViewData["UseContainer"] = false;
}

<!-- Offcanvas Sidebar for Mobile -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="sidebarMenu" aria-labelledby="sidebarMenuLabel">
    <div class="offcanvas-header bg-crimson text-white">
        <h5 class="offcanvas-title" id="sidebarMenuLabel">Menu Tài Khoản</h5>
        <button type="button" class="btn-close text-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="p-3 border-bottom">
            <div class="d-flex align-items-center mb-3">
                <img src="https://i.pinimg.com/736x/f0/cd/c4/f0cdc47ddb7f9dd5e86c3e7915c8b337.jpg" alt="Profile"
                    class="rounded-circle me-2" style="width: 45px; height: 45px;">
                <div>
                    <h6 class="mb-0">Nguyễn Văn A</h6>
                    <small class="text-muted">nguyenvana</small>
                </div>
            </div>
        </div>

        <ul class="nav flex-column p-3">
            <li class="nav-item mb-2">
                <a href="./Profile.html" class="nav-link active text-crimson">
                    <i class="bi bi-person-circle me-2"></i>
                    Thông tin cá nhân
                </a>
            </li>
            <li class="nav-item mb-2">
                <a href="./Orders.html" class="nav-link text-dark">
                    <i class="bi bi-box-seam me-2"></i>
                    Đơn hàng của tôi
                </a>
            </li>
            <li class="nav-item mb-2">
                <a href="./Vouchers.html" class="nav-link text-dark">
                    <i class="bi bi-ticket-perforated me-2"></i>
                    Voucher của tôi
                </a>
            </li>
            <li class="nav-item mb-2">
                <a href="./Address.html" class="nav-link text-dark">
                    <i class="bi bi-geo-alt me-2"></i>
                    Địa chỉ
                </a>
            </li>
            <li class="nav-item mb-2">
                <a href="./Repassword.html" class="nav-link text-dark">
                    <i class="bi bi-shield-lock me-2"></i>
                    Đổi mật khẩu
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link text-dark">
                    <i class="bi bi-box-arrow-right me-2"></i>
                    Đăng xuất
                </a>
            </li>
        </ul>
    </div>
</div>


<div class="container-fluid">
    <div class="row">
        <!-- Button to toggle sidebar on mobile -->
        <div class="d-lg-none p-3">
            <button class="btn btn-outline-danger" type="button" data-bs-toggle="offcanvas"
                data-bs-target="#sidebarMenu">
                <i class="bi bi-list"></i>
            </button>
        </div>

        <!-- Sidebar for desktop -->
        <div class="col-lg-3 col-xl-2 d-none d-lg-block sidebar bg-white border-end">
            <div class="position-sticky" style="top: 1rem;">
                <div class="p-3 border-bottom">
                    <div class="d-flex align-items-center mb-3">
                        <img src="https://i.pinimg.com/736x/f0/cd/c4/f0cdc47ddb7f9dd5e86c3e7915c8b337.jpg" alt="Profile"
                            class="rounded-circle me-2" style="width: 45px; height: 45px;">
                        <div>
                            <h6 class="mb-0">Nguyễn Văn A</h6>
                            <small class="text-muted">nguyenvana</small>
                        </div>
                    </div>
                </div>

                <ul class="nav flex-column p-3">
                    <li class="nav-item mb-2">
                        <a href="./Profile.html" class="nav-link active text-crimson">
                            <i class="bi bi-person-circle me-2"></i>
                            Thông tin cá nhân
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="./Orders.html" class="nav-link text-dark">
                            <i class="bi bi-box-seam me-2"></i>
                            Đơn hàng của tôi
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="./Address.html" class="nav-link text-dark">
                            <i class="bi bi-geo-alt me-2"></i>
                            Địa chỉ
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="./Vouchers.html" class="nav-link text-dark">
                            <i class="bi bi-ticket-perforated me-2"></i>
                            Voucher
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="./Notification.html" class="nav-link text-dark">
                            <i class="bi bi-bell me-2"></i>
                            Thông báo
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="./Home.html" class="nav-link text-dark">
                            <i class="bi bi-box-arrow-right me-2"></i>
                            Đăng xuất
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9 col-xl-10 py-4 px-4 px-lg-5">
            <div class="row justify-content-center mt-4">
                <div class="col-lg-10">
                    <div class="bg-white rounded-4 shadow-lg overflow-hidden">
                        <form asp-action="Update" asp-controller="Profile" method="post"
                            enctype="multipart/form-data" class="needs-validation" novalidate>
                            @Html.AntiForgeryToken()
                            <div class="row g-0">
                                <!-- Profile Banner & Avatar Section -->
                                <div class="col-12">
                                    <div class="bg-danger bg-opacity-10 position-relative pt-5 pb-4 px-4">
                                        <div class="text-center">
                                            <div class="position-relative d-inline-block">
                                                <img id="avatar-img" src="@(string.IsNullOrEmpty(Model.Avatar) ? "https://i.pinimg.com/736x/f0/cd/c4/f0cdc47ddb7f9dd5e86c3e7915c8b337.jpg" : Model.Avatar + "?v=" + Guid.NewGuid())"
                                                    alt="Avatar"
                                                    class="rounded-circle border border-4 border-white shadow-lg"
                                                    style="width: 150px; height: 150px; object-fit: cover;">
                                                <input type="file" id="profile-image" name="avatarFile" accept="image/*"
                                                    class="d-none">
                                                <label for="profile-image" class="position-absolute bottom-0 end-0 bg-white rounded-circle px-2 py-1 shadow-sm cursor-pointer"
                                                    style="cursor: pointer;">
                                                    <i class="bi bi-camera-fill text-crimson"></i>
                                                </label>
                                            </div>
                                            <h4 class="mt-3 mb-1 fw-bold">@Model.FullName</h4>
                                            <p class="text-crimson mb-0">
                                                <i class="bi bi-calendar-check me-1"></i>
                                                Tham gia: @Model.CreateAt.ToString("dd/MM/yyyy")
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <!-- User Details Form -->
                                <div class="col-12">
                                    <div class="p-4 p-lg-5">
                                        <div class="row g-4">
                                            <div class="col-md-6">
                                                <label for="fullName" class="form-label text-crimson fw-bold">
                                                    <i class="bi bi-person-fill me-2"></i>Họ và tên
                                                </label>
                                                <input type="text" class="form-control form-control-lg border-crimson"
                                                    id="fullName" name="FullName" value="@Model.FullName" required />
                                                <span asp-validation-for="FullName" class="text-danger"></span>
                                            </div>

                                            <div class="col-md-6">
                                                <label for="birthDate" class="form-label text-crimson fw-bold">
                                                    <i class="bi bi-calendar-date me-2"></i>Ngày sinh
                                                </label>
                                                <input type="date" class="form-control form-control-lg border-crimson"
                                                    id="birthDate" name="BirthDay"
                                                    value="@Model.BirthDay?.ToString("yyyy-MM-dd")" required
                                                    max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                                <span asp-validation-for="BirthDay" class="text-danger"></span>
                                            </div>

                                            <div class="col-md-6">
                                                <label for="gender" class="form-label text-crimson fw-bold">
                                                    <i class="bi bi-gender-ambiguous me-2"></i>Giới tính
                                                </label>
                                                <select class="form-select form-select-lg border-crimson" id="gender"
                                                    name="Gender" required>
                                                    @foreach (DATN_GO.Models.GenderType gender in Enum.GetValues(typeof(DATN_GO.Models.GenderType)))
                                                    {
                                                        var displayAttr = gender.GetType()
                                                        .GetMember(gender.ToString())[0]
                                                        .GetCustomAttribute<DisplayAttribute>();

                                                        var displayName = displayAttr?.Name ?? gender.ToString();
                                                        <option value="@gender"
                                                            selected="@(Model.Gender == gender ? "selected" : null)">
                                                            @displayName
                                                        </option>
                                                    }
                                                </select>
                                                <span asp-validation-for="Gender" class="text-danger"></span>
                                            </div>

                                            <div class="col-md-6">
                                                <label for="phone" class="form-label text-crimson fw-bold">
                                                    <i class="bi bi-telephone-fill me-2"></i>Số điện thoại
                                                </label>
                                                <div class="input-group input-group-lg align-items-center">
                                                    <input type="tel" class="form-control border-crimson" id="phone"
                                                        value="@Model.Phone" readonly>
                                                    <a href="./ChangeEmail.html"
                                                        class="btn btn-crimson d-flex align-items-center px-4"
                                                        style="height: 44px;">
                                                        <i class="bi bi-pencil-square me-2"></i> Đổi số
                                                    </a>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <label for="email" class="form-label text-crimson fw-bold">
                                                    <i class="bi bi-envelope-fill me-2"></i>Email
                                                </label>
                                                <div class="input-group input-group-lg align-items-center">
                                                    <input type="email" class="form-control border-crimson" id="email"
                                                        value="@Model.Email" readonly>
                                                    <a href="./ChangeEmail.html"
                                                        class="btn btn-crimson d-flex align-items-center px-4"
                                                        style="height: 44px;">
                                                        <i class="bi bi-pencil-square me-2"></i> Đổi email
                                                    </a>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Action Buttons -->
                                        <div class="d-flex flex-wrap gap-2 justify-content-center mt-5">
                                            <button type="submit" class="btn btn-crimson btn-lg px-4">
                                                <i class="bi bi-floppy me-2"></i>Lưu thay đổi
                                            </button>
                                            <a href="./Repassword.html" class="btn btn-outline-crimson btn-lg px-4">
                                                <i class="bi bi-key me-2"></i>Đổi mật khẩu
                                            </a>
                                            <a href="./SalesRegistration.html" class="btn btn-warning btn-lg px-4">
                                                <i class="bi bi-shop me-2"></i>Đăng ký bán hàng
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    var avatarImg = document.getElementById('avatar-img');
                    if (avatarImg) {
                        avatarImg.src = e.target.result;
                    }
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        var profileImageInput = document.getElementById('profile-image');
        if (profileImageInput) {
            profileImageInput.addEventListener('change', function() {
                previewImage(this);
            });
        }
    });
</script>
