                                    <div class="col-12">
                                        <label class="form-label">Giới tính</label>
                                        <select asp-for="Gender" class="form-select border-only-bottom">
                                            <option value="true">Nam</option>
                                            <option value="false">Nữ</option>
                                        </select>
                                    </div>
                                    @* <div class="col-12"> *@
                                    @*     <label class="form-label">Số điện thoại</label> *@
                                    @*     <div class="d-flex align-items-center"> *@
                                    @*         <input type="tel" asp-for="PhoneNumber" class="form-control border-only-bottom" readonly> *@
                                    @*         @if (string.IsNullOrEmpty(Model.PhoneNumber)) *@
                                    @*         { *@
                                    @*             <a asp-controller="UserAuthentication" asp-action="AddPhoneNumber" class="text-nowrap text-decoration-none ms-2"> *@
                                    @*                 Thêm số điện thoại *@
                                    @*             </a> *@
                                    @*         } *@
                                    @*         else *@
                                    @*         { *@
                                    @*             <a asp-controller="UserAuthentication" asp-action="ChangePhoneNumber" class="text-nowrap text-decoration-none ms-2"> *@
                                    @*                 Đổi số điện thoại *@
                                    @*             </a> *@
                                    @*         } *@
                                    @*     </div> *@
                                    @* </div> *@

                                    <div class="col-12">
                                        <label class="form-label">Email</label>
                                        <div class="d-flex align-items-center">
                                            <input type="email" asp-for="Email" class="form-control border-only-bottom" readonly>
                                            @if (string.IsNullOrEmpty(Model.Email))
                                            {
                                                <a asp-controller="UserAuthentication" asp-action="ChangeEmailPrompt" class="text-nowrap text-decoration-none ms-2">
                                                    Thêm email
                                                </a>
                                            }
                                            else
                                            {
                                                <a asp-controller="UserAuthentication" asp-action="ChangeEmailPrompt" class="text-nowrap text-decoration-none ms-2">
                                                    Đổi email
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-4 pt-3 border-top">
                                    <button type="submit" class="btn btn-primary m-1">
                                        <i class="bi bi-floppy me-1"></i> Lưu
                                    </button>

                                    <a asp-controller="UserAuthentication" asp-action="ChangePassword" class="btn btn-outline-danger m-1">
                                        <i class="bi bi-key me-1"></i> Đổi mật khẩu
                                    </a>

                                    <a asp-controller="SalesRegistration" asp-action="SalesRegistration" class="btn btn-outline-warning m-1">
                                        <i class="bi bi-shop me-1"></i> Đăng ký bán hàng
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
