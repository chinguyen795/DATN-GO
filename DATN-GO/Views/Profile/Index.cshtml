@model DATN_GO.Models.Users
@{
    ViewData["Title"] = "Profile Page";
}
@{
    ViewData["UseContainer"] = false;
}

<!-- Offcanvas Sidebar for Mobile -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="sidebarMenu" aria-labelledby="sidebarMenuLabel">
    <div class="offcanvas-header bg-danger text-white">
        <h5 class="offcanvas-title" id="sidebarMenuLabel">Menu Tài Khoản</h5>
        <button type="button" class="btn-close text-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="p-3 border-bottom">
            <div class="d-flex align-items-center mb-3">
                <img src="https://i.pinimg.com/736x/f0/cd/c4/f0cdc47ddb7f9dd5e86c3e7915c8b337.jpg"
                     alt="Profile" class="rounded-circle me-2" style="width: 45px; height: 45px;">
                <div>
                    <h6 class="mb-0">Nguyễn Văn A</h6>
                    <small class="text-muted">nguyenvana</small>
                </div>
            </div>
        </div>

        <ul class="nav flex-column p-3">
            <li class="nav-item mb-2">
                <a href="./Profile.html" class="nav-link active text-danger">
                    <i class="bi bi-person-circle me-2"></i>
                    Thông tin cá nhân
                </a>
            </li>
            <li class="nav-item mb-2">
                <a href="./Orders.html" class="nav-link text-dark">
                    <i class="bi bi-box-seam me-2"></i>
                    Đơn hàng của tôi
                </a>
            </li>
            <li class="nav-item mb-2">
                <a href="./Vouchers.html" class="nav-link text-dark">
                    <i class="bi bi-ticket-perforated me-2"></i>
                    Voucher của tôi
                </a>
            </li>
            <li class="nav-item mb-2">
                <a href="./Address.html" class="nav-link text-dark">
                    <i class="bi bi-geo-alt me-2"></i>
                    Địa chỉ
                </a>
            </li>
            <li class="nav-item mb-2">
                <a href="./Repassword.html" class="nav-link text-dark">
                    <i class="bi bi-shield-lock me-2"></i>
                    Đổi mật khẩu
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link text-dark">
                    <i class="bi bi-box-arrow-right me-2"></i>
                    Đăng xuất
                </a>
            </li>
        </ul>
    </div>
</div>


<div class="container-fluid">
    <div class="row">
        <!-- Button to toggle sidebar on mobile -->
        <div class="d-lg-none p-3">
            <button class="btn btn-outline-danger" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu">
                <i class="bi bi-list"></i>
            </button>
        </div>

        <!-- Sidebar for desktop -->
        <div class="col-lg-3 col-xl-2 d-none d-lg-block sidebar bg-white border-end">
            <div class="position-sticky" style="top: 1rem;">
                <div class="p-3 border-bottom">
                    <div class="d-flex align-items-center mb-3">
                        <img src="https://i.pinimg.com/736x/f0/cd/c4/f0cdc47ddb7f9dd5e86c3e7915c8b337.jpg"
                             alt="Profile" class="rounded-circle me-2" style="width: 45px; height: 45px;">
                        <div>
                            <h6 class="mb-0">Nguyễn Văn A</h6>
                            <small class="text-muted">nguyenvana</small>
                        </div>
                    </div>
                </div>

                <ul class="nav flex-column p-3">
                    <li class="nav-item mb-2">
                        <a href="./Profile.html" class="nav-link active text-danger">
                            <i class="bi bi-person-circle me-2"></i>
                            Thông tin cá nhân
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="./Orders.html" class="nav-link text-dark">
                            <i class="bi bi-box-seam me-2"></i>
                            Đơn hàng của tôi
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="./Address.html" class="nav-link text-dark">
                            <i class="bi bi-geo-alt me-2"></i>
                            Địa chỉ
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="./Vouchers.html" class="nav-link text-dark">
                            <i class="bi bi-ticket-perforated me-2"></i>
                            Voucher
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="./Notification.html" class="nav-link text-dark">
                            <i class="bi bi-bell me-2"></i>
                            Thông báo
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="./Home.html" class="nav-link text-dark">
                            <i class="bi bi-box-arrow-right me-2"></i>
                            Đăng xuất
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9 col-xl-10 py-4 px-4 px-lg-5">
            <div class="row justify-content-center mt-4">
                <div class="col-lg-10">
                    <div class="bg-white rounded-4 shadow-lg overflow-hidden">
                        <div class="row g-0">
                            <!-- Profile Banner & Avatar Section -->
                            <div class="col-12">
                                <div class="bg-danger bg-opacity-10 position-relative pt-5 pb-4 px-4">
                                    <div class="text-center">
                                        <div class="position-relative d-inline-block">
                                            <img src="https://i.pinimg.com/736x/f0/cd/c4/f0cdc47ddb7f9dd5e86c3e7915c8b337.jpg"
                                                 alt="Avatar" class="rounded-circle border border-4 border-white shadow-lg"
                                                 style="width: 150px; height: 150px; object-fit: cover;">
                                            <label class="position-absolute bottom-0 end-0 bg-white rounded-circle px-2 py-1 shadow-sm cursor-pointer"
                                                   style="cursor: pointer;" for="profile-image">
                                                <i class="bi bi-camera-fill text-danger"></i>
                                                <input type="file" id="profile-image" accept="image/*" class="d-none"
                                                       onchange="previewImage(this);">
                                            </label>
                                        </div>
                                        <h4 class="mt-3 mb-1 fw-bold">Nguyễn Văn A</h4>
                                        <p class="text-danger mb-0">
                                            <i class="bi bi-calendar-check me-1"></i>
                                            Tham gia: 09/06/2023
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- User Details Form -->
                            <div class="col-12">
                                <div class="p-4 p-lg-5">
                                    <form class="needs-validation" novalidate>
                                        <div class="row g-4">
                                            <div class="col-md-6">
                                                <label for="fullName" class="form-label text-danger fw-bold">
                                                    <i class="bi bi-person-fill me-2"></i>Họ và tên
                                                </label>
                                                <input type="text" class="form-control form-control-lg border-danger"
                                                       id="fullName" value="Nguyễn Văn A">
                                            </div>

                                            <div class="col-md-6">
                                                <label for="birthDate" class="form-label text-danger fw-bold">
                                                    <i class="bi bi-calendar-date me-2"></i>Ngày sinh
                                                </label>
                                                <input type="date" class="form-control form-control-lg border-danger"
                                                       id="birthDate" value="1990-01-01">
                                            </div>

                                            <div class="col-md-6">
                                                <label for="gender" class="form-label text-danger fw-bold">
                                                    <i class="bi bi-gender-ambiguous me-2"></i>Giới tính
                                                </label>
                                                <select class="form-select form-select-lg border-danger" id="gender">
                                                    <option value="male" selected>Nam</option>
                                                    <option value="female">Nữ</option>
                                                    <option value="other">Khác</option>
                                                </select>
                                            </div>

                                            <div class="col-md-6">
                                                <label for="phone" class="form-label text-danger fw-bold">
                                                    <i class="bi bi-telephone-fill me-2"></i>Số điện thoại
                                                </label>
                                                <div class="input-group input-group-lg">
                                                    <input type="tel" class="form-control border-danger"
                                                           id="phone" value="0987654321">
                                                    <a href="./ChangeEmail.html" class="btn btn-danger">
                                                        <i class="bi bi-pencil-square"></i> Đổi số
                                                    </a>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <label for="email" class="form-label text-danger fw-bold">
                                                    <i class="bi bi-envelope-fill me-2"></i>Email
                                                </label>
                                                <div class="input-group input-group-lg">
                                                    <input type="email" class="form-control border-danger"
                                                           id="email" value="nguyenvana@example.com" readonly>
                                                    <a href="./ChangeEmail.html" class="btn btn-danger">
                                                        <i class="bi bi-pencil-square"></i> Đổi email
                                                    </a>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Action Buttons -->
                                        <div class="d-flex flex-wrap gap-2 justify-content-center mt-5">
                                            <button type="submit" class="btn btn-primary btn-lg px-4">
                                                <i class="bi bi-floppy me-2"></i>Lưu thay đổi
                                            </button>
                                            <a href="./Repassword.html" class="btn btn-outline-danger btn-lg px-4">
                                                <i class="bi bi-key me-2"></i>Đổi mật khẩu
                                            </a>
                                            <a href="./SalesRegistration.html" class="btn btn-warning btn-lg px-4">
                                                <i class="bi bi-shop me-2"></i>Đăng ký bán hàng
                                            </a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>