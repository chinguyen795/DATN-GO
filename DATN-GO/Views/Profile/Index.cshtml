                    <h4 class="mb-4 pb-3 border-bottom text-danger">Thông Tin Cá Nhân</h4>
                    <form asp-controller="Profile" asp-action="Update" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="row align-items-center">
                            <div class="col-lg-4 text-center mb-4 mb-lg-0">
                                <img src="@(string.IsNullOrEmpty(Model.Avatar) ? "/images/avt-user.jpg" : Model.Avatar)" alt="Avatar" class="rounded-circle profile-avatar mb-2 border border-danger" id="currentAvatar">                                <div>
                                    <label class="btn btn-sm btn-outline-danger" for="profile-image">
                                        <i class="bi bi-image me-1"></i> Chọn ảnh
                                    </label>
                                    <input type="file" id="profile-image" name="avatarFile" accept="image/*" class="d-none" onchange="previewImage(this);"> @* **Thêm name="avatarFile", bỏ disabled** *@
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <label class="form-label">Họ và tên</label>
                                        <input type="text" asp-for="FullName" class="form-control border-only-bottom">
                                    </div>
                                  @*   <div class="col-12">
