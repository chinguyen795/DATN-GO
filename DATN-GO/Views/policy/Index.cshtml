        // Cuộn lên đầu content
        document.querySelector('.content').scrollIntoView({
            behavior: 'smooth'
        });
    }

    // Thêm hiệu ứng hover cho các tab
    document.querySelectorAll('.tab').forEach((tab, index) => {
        tab.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-2px)';
        });

        tab.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0)';
        });
    });

    // Thêm hiệu ứng fade in khi chuyển tab
    function showTab(tabIndex) {
        const sections = document.querySelectorAll('.policy-section');
        const tabs = document.querySelectorAll('.tab');

        // Fade out current section
        sections.forEach(section => {
            if (section.classList.contains('active')) {
                section.style.opacity = '0';
                setTimeout(() => {
                    section.classList.remove('active');
                    section.style.opacity = '1';
                }, 150);
            }
        });

        // Remove active from all tabs
        tabs.forEach(tab => tab.classList.remove('active'));

        // Show new section with fade in
        setTimeout(() => {
            sections[tabIndex].classList.add('active');
            sections[tabIndex].style.opacity = '0';
            setTimeout(() => {
                sections[tabIndex].style.opacity = '1';
            }, 50);
        }, 150);

        // Add active to clicked tab
        tabs[tabIndex].classList.add('active');

        // Smooth scroll to content
        document.querySelector('.content').scrollIntoView({
            behavior: 'smooth'
        });
    }
</script>