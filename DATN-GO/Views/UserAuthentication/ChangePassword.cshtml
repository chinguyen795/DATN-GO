@{
    ViewData["Title"] = "ChangePassword Page";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="bg-white p-4 p-md-5 rounded shadow-sm">
                <h4 class="text-danger text-center mb-4">Đổi Mật Khẩu</h4>
                <form>
                    <div class="mb-4">
                        <label class="form-label">Email</label>
                        <p class="text-muted mb-0">example@email.com</p>
                    </div>
                    <div class="mb-4">
                        <label class="form-label">Mật khẩu hiện tại</label>
                        <div class="input-group">
                            <input type="password" class="form-control border-only-bottom" placeholder="Nhập mật khẩu hiện tại">
                            <button class="btn btn-outline-danger" type="button">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label class="form-label">Mật khẩu mới</label>
                        <div class="input-group">
                            <input type="password" class="form-control border-only-bottom" placeholder="Nhập mật khẩu mới">
                            <button class="btn btn-outline-danger" type="button">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label class="form-label">Nhập lại mật khẩu mới</label>
                        <div class="input-group">
                            <input type="password" class="form-control border-only-bottom" placeholder="Nhập lại mật khẩu mới">
                            <button class="btn btn-outline-danger" type="button">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-check-circle me-1"></i>Xác nhận
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>