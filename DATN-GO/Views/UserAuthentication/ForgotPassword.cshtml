@model DATN_GO.ViewModels.Authentication.ForgotPasswordRequest

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đặt Lại Mật Khẩu</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/homestyle.css" />
</head>
<body>
    <div class="container-fluid vh-100">
        <div class="row h-100">
            <div class="col-md-6 d-none d-md-block p-0">
                <div class="h-100 bg-crimson d-flex align-items-center justify-content-center position-relative">
                    <img src="~/images/imglog.png" class="w-100 h-100" style="object-fit: cover;">
                    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50 d-flex align-items-center justify-content-center">
                        <div class="text-center text-white">
                            <h1 class="display-4 fw-bold mb-3">Chào mừng bạn!</h1>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 d-flex align-items-center justify-content-center">
                <div class="w-100">
                    <!-- Form Quên Mật Khẩu -->
                    <div id="forgotPasswordForm" class="p-5">
                        <div>
                            <h2 class="text-center mb-4">Đặt Lại Mật Khẩu</h2>
                            <form asp-controller="UserAuthentication" asp-action="ForgotPassword" method="post">
                                <div class="mb-3">
                                    <label asp-for="Identifier" class="form-label">Tài khoản</label>
                                    <input asp-for="Identifier" class="form-control form-control-lg" placeholder="Email / Số điện thoại" />

                                    <!-- Hiển thị lỗi nếu có -->
                                    <span asp-validation-for="Identifier" class="text-crimson"></span>
                                </div>
                                <button type="submit" class="btn btn-crimson btn-lg w-100 mb-3">
                                    Tiếp Theo
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>