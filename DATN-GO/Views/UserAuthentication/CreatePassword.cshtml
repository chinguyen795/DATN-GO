@model DATN_GO.Models.Users
@{
    ViewData["Title"] = "Tạo Mật Khẩu";
    var identifier = ViewBag.Identifier as string;
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="bg-white p-4 p-md-5 rounded shadow-sm">
                <h4 class="text-danger text-center mb-4">Tạo Mật Khẩu</h4>
                <form asp-action="CreatePassword" asp-controller="UserAuthentication" method="post">
                    <input type="hidden" name="identifier" value="@identifier" />

                    <div class="mb-4">
                        <label class="form-label">Email/Số điện thoại</label>
                        <p class="text-muted mb-0">@identifier</p>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Mật khẩu</label>
                        <div class="input-group">
                            <input type="password" asp-for="Password" id="password" class="form-control border-only-bottom" placeholder="Nhập mật khẩu">
                            <button class="btn btn-outline-danger" type="button" data-target="password">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Nhập lại mật khẩu</label>
                        <div class="input-group">
                            <input type="password" name="confirmPassword" id="confirmPassword" class="form-control border-only-bottom" placeholder="Nhập lại mật khẩu">
                            <button class="btn btn-outline-danger" type="button" data-target="confirmPassword">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-check-circle me-1"></i> Xác nhận
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>