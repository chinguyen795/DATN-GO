    <script>
        $(document).ready(function () {
            $('.category-carousel').owlCarousel({
                loop: true,
                margin: 10,
                nav: true,
                dots: false,
                navText: [
                    '<i class="bi bi-chevron-left"></i>',
                    '<i class="bi bi-chevron-right"></i>'
                ],
                responsive: {
                    0: {
                        items: 3,
                        margin: 5
                    },
                    400: {
                        items: 4,
                        margin: 10
                    },
                    576: {
                        items: 5
                    },
                    768: {
                        items: 6
                    },
                    992: {
                        items: 7
                    },
                    1200: {
                        items: 8
                    }
                },
                onInitialized: function () {
                    setTimeout(function () {
                        $('.scroll-indicator').fadeOut();
                    }, 3000);
                }
            });
        });
    </script>




    <!-- modal dang nhap -->
    <div class="modal fade " id="exampleModalToggle" aria-hidden="false" aria-labelledby="exampleModalToggleLabel"
        tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg ">
            <div class="modal-content text-white position-relative-example"
                style="  background: linear-gradient(to bottom, #DC143c, white);">
                <div class="modal-header border-0">
                    <div type="button" class="position-absolute top-0 start-100 translate-middle"
                        data-bs-dismiss="modal" aria-label="Close">
                        <i class="fs-1 bi bi-x-circle-fill"></i>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="logo-login d-flex justify-content-center">
                        <a class="navbar-brand" href="#">
                            <img src="~/images/logo.png" alt="" height="170">
                        </a>
                    </div>
                    <h1 class="d-flex fw-bold justify-content-center pb-4">
                        Đăng nhập
                    </h1>
                    <div class="d-block justify-content-center">
                        <form asp-controller="UserAuthentication" asp-action="Login" method="post" class="d-block mx-5">
                            <input name="Identifier" class="form-control mx-2 rounded-pill form-control-lg mb-2"
                                type="text" id="emailHelpId" placeholder="Email / Số điện thoại" aria-label="">
                            <small id="emailHelpId" class="form-text text-muted mx-2 mb-2"> </small>
                            <input name="Password" class="form-control mx-2 rounded-pill form-control-lg mb-2"
                                type="password" id="password" placeholder="Mật khẩu" aria-label="password">
                            <small id="password" class="form-text text-muted mx-2 mb-2"> </small>
                            <div class="row mx-3 mb-4">
                                <div class="col d-flex justify-content-end">
                                    <!-- Simple link -->
                                    <a asp-controller="UserAuthentication" asp-action="ForgotPassword">Quên mật
                                        khẩu?</a>
                                </div>
                            </div>
                            <div class="d-grid gap-2 col-6 mx-auto mb-2">
                                <button class="btn btn-danger rounded-pill" type="submit">Đăng nhập</button>
                            </div>
                        </form>

                        <div class="text-center mb-4">
                            <p>
                                Bạn chưa có tài khoản? <a href="#" data-bs-target="#exampleModalToggle2"
                                    data-bs-toggle="modal" data-bs-dismiss="modal">Đăng kí</a>
                            </p>
                            <p>Hoặc đăng nhập với:</p>
                            <button data-mdb-ripple-init type="button"
                                class="btn btn-outline-primary btn-floating mx-4 btn-lg">
                                <i class="fab fa-facebook-f"></i>
                            </button>

                            <button data-mdb-ripple-init type="button"
                                class="btn btn-outline-danger btn-floating mx-4 btn-lg">
                                <i class="fab fa-google"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- modal dang ki -->
    <div class="modal fade" id="exampleModalToggle2" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2"
        tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg ">
            <div class="modal-content text-white position-relative-example"
                style="  background: linear-gradient(to bottom, #DC143c, white);">
                <div class="modal-header border-0">
                    <div type="button" class="position-absolute top-0 start-100 translate-middle"
                        data-bs-dismiss="modal" aria-label="Close">
                        <i class="fs-1 bi bi-x-circle-fill"></i>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="logo-login d-flex justify-content-center">
                        <a class="navbar-brand" href="#">
                            <img src="~/images/logo.png" alt="" height="170">
                        </a>
                    </div>
                    <h1 class="d-flex fw-bold justify-content-center pb-4">
                        Đăng kí
                    </h1>
                    <div class="d-block justify-content-center">
                        <form class="d-block mx-5" asp-controller="UserAuthentication" asp-action="Register"
                            method="post">
                            <input name="identifier" class="form-control mx-2 rounded-pill form-control-lg mb-2"
                                type="text" id="emailHelpId" placeholder="Email / Số điện thoại" aria-label="">
                            <small id="emailHelpId" class="form-text text-muted mx-2 mb-2"> </small>

                            <div class="d-grid gap-2 col-6 mx-auto mb-2">
                                <button class="btn btn-danger rounded-pill" type="submit">Xác nhận</button>
                            </div>
                            <div class="text-center mb-4">
                                <p>Bạn đã có tài khoản? <a href="#" data-bs-target="#exampleModalToggle"
                                        data-bs-toggle="modal" data-bs-dismiss="modal">Đăng nhập</a></p>
                                <p>Hoặc đăng kí với:</p>
                                <button data-mdb-ripple-init type="button"
                                    class="btn btn-outline-primary btn-floating mx-4 btn-lg">
                                    <i class="fab fa-facebook-f"></i>
                                </button>

                                <button data-mdb-ripple-init type="button"
                                    class="btn btn-outline-danger btn-floating mx-4 btn-lg">
                                    <i class="fab fa-google"></i>
                                </button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <div class="position-fixed top-0 end-0 p-3" style="z-index: 1056">
        @if (TempData["ToastMessage"] != null && TempData["ToastType"] != null)
        {
            var toastType = TempData["ToastType"].ToString();
            var isSuccess = toastType == "success";
            <div class="toast @(isSuccess ? "" : "mt-3")" role="alert" aria-live="assertive" aria-atomic="true"
                id="autoToast">
                <div class="toast-header @(isSuccess ? "bg-success" : "bg-danger") text-white">
                    <img src="@(isSuccess ? "/icons/happy.gif" : "/icons/sad.gif")" class="rounded me-2"
                        alt="@(isSuccess ? "Success" : "Error")" width="20" height="20">
                    <strong class="me-auto">@((isSuccess) ? "Thành công" : "Lỗi")</strong>
                    <small>Vừa xong</small>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"
                        aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    @TempData["ToastMessage"]
                </div>
            </div>
        }
    </div>

</body>


