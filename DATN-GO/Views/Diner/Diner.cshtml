@{
    ViewData["Title"] = "Diner Page";
}


<!-- Filter bar -->
<div class="container bg-danger rounded-3 mt-3 mb-5 py-3">
    <div class="row">
        <div class="col">
            <select class="form-select bg-danger rounded-0 text-white fw-bold border-0 border-bottom" id="foodTypeFilter">
                <option value="">
                    <i class="bi bi-egg-fried"></i> Tất cả món ăn
                </option>
                <option value="mon-nuoc">Món nước</option>
                <option value="mon-kho">Món khô</option>
                <option value="do-an-vat">Đồ ăn vặt</option>
                <option value="trang-mieng">Tráng miệng</option>
            </select>
        </div>
        <div class="col">
            <select class="form-select bg-danger rounded-0 text-white fw-bold border-0 border-bottom" id="sortFilter">
                <option value="">
                    <i class="bi bi-fire"></i> Sắp xếp theo
                </option>
                <option value="price-asc">Giá tăng dần</option>
                <option value="price-desc">Giá giảm dần</option>
                <option value="rating-desc">Đánh giá cao nhất</option>
                <option value="popular">Phổ biến nhất</option>
            </select>
        </div>
        <div class="col">
            <select class="form-select bg-danger rounded-0 text-white fw-bold border-0 border-bottom" id="provinceFilter">
                <option value="">
                    <i class="bi bi-geo-alt"></i> Tất cả tỉnh/thành
                </option>
            </select>
        </div>
        <div class="col">
            <select class="form-select bg-danger rounded-0 text-white fw-bold border-0 border-bottom" id="districtFilter" disabled>
                <option value="">
                    <i class="bi bi-geo"></i> Tất cả quận/huyện
                </option>
            </select>
        </div>
    </div>
</div>

<div class="row container mx-auto">
    <div class="col-lg-3 col-md-12">
        <!-- Store Filter -->
        <h5 class="mb-3">Lọc sản phẩm</h5>
        <div class="mb-3">
            <label for="searchInput" class="form-label">
                <i class="bi bi-search"></i> Tìm kiếm
            </label>
            <input type="text" id="searchInput" class="form-control" placeholder="Nhập từ khóa" />
        </div>
        <!-- Purchase Filter -->
        <div class="mb-3">
            <label class="form-label">Lượt mua</label>
            <div class="d-grid gap-2">
                <button class="btn btn-outline-danger purchase-filter" type="button" data-range="10000-">
                    Trên 10k <i class="bi bi-cart-check-fill"></i>
                </button>
                <button class="btn btn-outline-danger purchase-filter" type="button" data-range="5000-9999">
                    5k - 9.9k <i class="bi bi-cart-check-fill"></i>
                </button>
                <button class="btn btn-outline-danger purchase-filter" type="button" data-range="0-4999">
                    Dưới 5k <i class="bi bi-cart-check-fill"></i>
                </button>
            </div>
        </div>

        <button class="btn btn-danger w-100">
            <i class="bi bi-search"></i> Tìm kiếm
        </button>
        <!-- End of Store Filter -->
    </div>

