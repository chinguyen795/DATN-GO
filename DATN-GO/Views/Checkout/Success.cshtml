@{
    ViewData["Title"] = "Thanh toán thành công";
    var brand = "#dc143c";   // crimson
    var orderId = (int?)ViewBag.OrderId ?? 0;
    if (ViewBag.OrderId != null)
    {
        int.TryParse(ViewBag.OrderId.ToString(), out orderId);
    }
    // Dự phòng đọc từ query string nếu chưa có
    if (orderId == 0)
    {
        int.TryParse(Context.Request.Query["orderId"], out orderId);
    }
}
<style>
    .btn, h2 {
        text-transform: none !important;
    }
</style>

<div class="min-vh-100 d-flex align-items-center justify-content-center py-5" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body text-center p-5">
                        <!-- Icon thành công -->
                        <div class="mb-4">
                            <div class="rounded-circle d-inline-flex align-items-center justify-content-center mx-auto"
                                 style="width:80px;height:80px;background:@brand;color:#fff;">
                                <i class="bi bi-check-lg" style="font-size: 2.5rem;"></i>
                            </div>
                        </div>

                        <!-- Tiêu đề -->
                        <h2 class="mb-3 fw-bold" style="color:@brand">Thanh toán thành công!</h2>

                        <!-- Mô tả -->
                        <p class="text-muted mb-4 fs-5">
                            Đơn hàng của bạn đã được ghi nhận.<br>
                            Cảm ơn bạn đã mua sắm tại GO.
                        </p>


                        <!-- Nút hành động -->
                        <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                            <a class="btn btn-lg text-white px-4 py-3 rounded-3"
                               style="background:@brand;border:none;min-width:200px;"
                               asp-controller="Order"  asp-action="Index">
                                <i class="bi bi-file-text me-2"></i>XEM THÔNG TIN ĐƠN HÀNG
                            </a>
                            <a href="/"
                               class="btn btn-lg px-4 py-3 rounded-3"
                               style="color:@brand;border:2px solid @brand;background:#fff;min-width:200px;">
                                <i class="bi bi-house me-2"></i>Về trang chủ
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (async () => {
          try {
            // nếu bạn có endpoint đếm: GET /api/cart/count?userId=...
            const userId = Number(document.getElementById('userId')?.value || 0);
            if (!userId) return;
            const res = await fetch(`${'@ViewBag.ApiBaseUrl'}Cart/count?userId=${userId}`);
            if (!res.ok) return;
            const { count } = await res.json();
            const badge = document.querySelector('.header .cart-count-badge'); // đổi selector theo layout của bạn
            if (badge) badge.textContent = count;
          } catch {}
        })();
    </script>
}