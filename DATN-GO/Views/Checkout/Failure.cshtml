@{
    ViewData["Title"] = "Thanh toán thất bại";
    var brand = "#dc143c";   // crimson
    var msg = ViewBag.Message as string ?? "Có lỗi xảy ra trong quá trình thanh toán.";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-7">
            <div class="card shadow border-0">
                <div class="card-body p-4 p-md-5">

                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle d-inline-flex align-items-center justify-content-center me-3"
                             style="width:48px;height:48px;background:#ffe5ea;color:@brand;">
                            <i class="bi bi-x-lg fs-5"></i>
                        </div>
                        <h4 class="mb-0 fw-bold" style="color:@brand">Thanh toán thất bại</h4>
                    </div>

                    <p class="text-muted mb-3">@msg</p>

                    @* Thông tin đơn hàng nếu có *@
                    @if (ViewBag.OrderId != null)
                    {
                        <div class="border rounded p-3 mb-4">
                            <div class="text-muted small">Mã đơn tạm</div>
                            <div class="fw-semibold">#@ViewBag.OrderId</div>
                        </div>
                    }

                    <div class="d-flex flex-wrap gap-2">
                        <a href="/Cart"
                           class="btn"
                           style="background:@brand;color:#fff;border-color:@brand;">
                            Thử thanh toán lại
                        </a>
                        <a href="/"
                           class="btn"
                           style="color:@brand;border:1px solid @brand;background:#fff;">
                            Về trang chủ
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
