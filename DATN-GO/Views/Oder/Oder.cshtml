                    <li class="nav-item mb-2">
                        <a asp-controller="Profile" asp-action="Profile" class="nav-link active text-danger">
                            <i class="bi bi-person-circle me-2"></i>
                            Thông tin cá nhân
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a asp-controller="Oder" asp-action="Oder" class="nav-link text-dark">
                            <i class="bi bi-box-seam me-2"></i>
                            Đơn hàng của tôi
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a asp-controller="Address" asp-action="Address" class="nav-link text-dark">
