@if (Model != null)
{
    <div class="container-fluid py-4">
        <!-- Back Button -->
        <div class="row mb-4">
            <div class="col-12">
                <a asp-controller="Order" asp-action="Index" class="btn btn-outline-crimson">
                    <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách đơn hàng
                </a>
            </div>
        </div>

        <!-- Order Header Card -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow border-0">
                    <div class="card-header bg-crimson text-white py-3">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <h4 class="mb-0">
                                    <i class="bi bi-receipt-cutoff me-2"></i>
                                    Đơn hàng #@Model.OrderId
                                </h4>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <span class="badge bg-light text-dark fs-6 px-3 py-2">@Model.Status</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-4">
                            <div class="col-md-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded-circle p-3 me-3">
                                        <i class="bi bi-calendar3 text-crimson fs-5"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted">Ngày đặt</small>
                                        <div class="fw-semibold">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded-circle p-3 me-3">
                                        <i class="bi bi-credit-card text-success fs-5"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted">Thanh toán</small>
                                        <div class="fw-semibold">@Model.PaymentMethod</div>
                                        <small class="text-success">@Model.PaymentStatus</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded-circle p-3 me-3">
                                        <i class="bi bi-truck text-info fs-5"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted">Vận chuyển</small>
                                        <div class="fw-semibold">Giao hàng tiết kiệm</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded-circle p-3 me-3">
                                        <i class="bi bi-qr-code text-warning fs-5"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted">Mã vận đơn</small>
                                        <div class="fw-semibold">@Model.LabelId</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Products Card -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow border-0">
                    <div class="card-header bg-light py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-basket3 me-2 text-crimson"></i>
                            Sản phẩm đã đặt
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col" class="border-0 ps-4">Hình ảnh</th>
                                        <th scope="col" class="border-0">Tên sản phẩm</th>
                                        <th scope="col" class="border-0 text-center">Số lượng</th>
                                        <th scope="col" class="border-0 text-end">Đơn giá</th>
                                        <th scope="col" class="border-0 text-end pe-4">Tạm tính</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td class="ps-4 py-3">
                                                @if (!string.IsNullOrEmpty(item.Image))
                                                {
                                                    <img src="@item.Image"
                                                         class="rounded shadow-sm"
                                                         width="70"
                                                         height="70"
                                                         style="object-fit: cover;" />
                                                }
                                                else
                                                {
                                                    <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                                         style="width: 70px; height: 70px;">
                                                        <i class="bi bi-image text-muted"></i>
                                                    </div>
                                                }
                                            </td>
                                            <td class="py-3">
                                                <div class="fw-semibold text-dark">@item.ProductName</div>
                                            </td>
                                            <td class="text-center py-3">
                                                <span class="badge bg-secondary rounded-pill px-3">@item.Quantity</span>
                                            </td>
                                            <td class="text-end py-3">
                                                <span class="text-muted">@item.Price.ToString("N0") đ</span>
                                            </td>
                                            <td class="text-end pe-4 py-3">
                                                <span class="fw-semibold text-dark">@item.SubTotal.ToString("N0") đ</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Summary Card -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow border-0">
                    <div class="card-body p-4">
                        <div class="row justify-content-end">
                            <div class="col-md-6 col-lg-4">
                                <div class="bg-light rounded p-4">
                                    <h6 class="text-uppercase text-muted mb-3">Tóm tắt đơn hàng</h6>

                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Tạm tính:</span>
                                        <span class="fw-semibold">@Model.ItemsTotal.ToString("N0") đ</span>
                                    </div>

                                    <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                                        <span>Phí vận chuyển:</span>
                                        <span class="fw-semibold">@Model.DeliveryFee.ToString("N0") đ</span>
                                    </div>

                                    <div class="d-flex justify-content-between">
                                        <span class="fs-5 fw-bold text-crimson">Tổng cộng:</span>
                                        <span class="fs-4 fw-bold text-crimson">@Model.TotalPrice.ToString("N0") đ</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container-fluid py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="card shadow border-0">
                    <div class="card-body py-5">
                        <i class="bi bi-exclamation-triangle text-warning display-1 mb-3"></i>
                        <h3 class="text-muted mb-3">Không tìm thấy đơn hàng</h3>
                        <p class="text-muted">Đơn hàng bạn đang tìm kiếm không tồn tại hoặc đã bị xóa.</p>
                        <a asp-controller="Order" asp-action="Index" class="btn btn-crimson">
                            <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách đơn hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}