@model DATN_GO.ViewModels.Orders.OrderDetailVM
@{
    ViewData["Title"] = "Xác nhận hủy đơn";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Main Cancel Card -->
            <div class="card shadow-lg border-0">
                <div class="card-header bg-crimson text-white text-center py-4">
                    <div class="mb-3">
                        <i class="bi bi-exclamation-triangle-fill display-4"></i>
                    </div>
                    <h3 class="mb-0 fw-bold">Xác nhận hủy đơn hàng</h3>
                </div>

                <div class="card-body p-5">
                    <!-- Warning Message -->
                    <div class="alert alert-warning border-0 mb-4" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-info-circle-fill me-3 fs-4"></i>
                            <div>
                                <strong>Lưu ý:</strong> Hành động này không thể hoàn tác!
                            </div>
                        </div>
                    </div>

                    <!-- Order Info -->
                    <div class="text-center mb-4">
                        <h5 class="text-muted mb-3">Bạn có chắc muốn hủy đơn hàng này không?</h5>

                        <div class="bg-light rounded p-4 mb-4">
                            <div class="row align-items-center">
                                <div class="col-6">
                                    <i class="bi bi-receipt text-crimson fs-3 mb-2"></i>
                                    <h6 class="text-muted mb-1">Mã đơn hàng</h6>
                                    <h4 class="fw-bold text-dark">#@Model.OrderId</h4>
                                </div>
                                <div class="col-6 border-start">
                                    <i class="bi bi-currency-dollar text-success fs-3 mb-2"></i>
                                    <h6 class="text-muted mb-1">Tổng tiền</h6>
                                    <h4 class="fw-bold text-crimson">
                                        @Model.TotalPrice.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Consequences Info -->
                    <div class="card bg-light border-0 mb-4">
                        <div class="card-body">
                            <h6 class="text-muted mb-3">
                                <i class="bi bi-clipboard-check me-2"></i>
                                Khi hủy đơn hàng:
                            </h6>
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2">
                                    <i class="bi bi-check-circle text-success me-2"></i>
                                    Đơn hàng sẽ được hủy ngay lập tức
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle text-success me-2"></i>
                                    Tiền sẽ được hoàn trả (nếu đã thanh toán)
                                </li>
                             
                            </ul>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <form asp-action="CancelOrder" asp-controller="Order" asp-route-id="@Model.OrderId" method="post">
                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-crimson btn-lg py-3">
                                <i class="bi bi-x-circle me-2"></i>
                                <strong>Xác nhận hủy đơn hàng</strong>
                            </button>

                            <a asp-action="Details" asp-controller="Order" asp-route-id="@Model.OrderId"
                               class="btn btn-outline-secondary btn-lg py-3">
                                <i class="bi bi-arrow-left me-2"></i>
                                Quay lại chi tiết đơn hàng
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Additional Help Card -->
            <div class="card border-0 bg-transparent mt-4">
                <div class="card-body text-center">
                    <p class="text-muted mb-2">
                        <i class="bi bi-question-circle me-1"></i>
                        Cần hỗ trợ?
                    </p>
                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        <a href="#" class="btn btn-outline-info btn-sm">
                            <i class="bi bi-telephone me-1"></i>
                            Hotline
                        </a>
                        <a href="#" class="btn btn-outline-info btn-sm">
                            <i class="bi bi-chat-dots me-1"></i>
                            Live Chat
                        </a>
                        <a href="#" class="btn btn-outline-info btn-sm">
                            <i class="bi bi-envelope me-1"></i>
                            Email
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles for Enhanced UX -->
<style>
    .btn-crimson {
        background-color: #dc143c;
        border-color: #dc143c;
        color: white;
        transition: all 0.3s ease;
    }

        .btn-crimson:hover {
            background-color: #b91c3c;
            border-color: #b91c3c;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(220, 20, 60, 0.3);
        }

    .bg-crimson {
        background-color: #dc143c !important;
    }

    .text-crimson {
        color: #dc143c !important;
    }

    .card {
        transition: transform 0.3s ease;
    }

    .btn:hover {
        transform: translateY(-1px);
    }

    .alert-warning {
        background-color: #fff3cd;
        border-left: 4px solid #ffc107;
    }
</style>