@{
    ViewData["Title"] = "Cart Page";
}

    <h2 class="text-center mb-4 text-danger">Giỏ Hàng Của Bạn</h2>
    <div class="row">
        <!-- Cart Items Table -->
        <div class="col-lg-8">
            <div class="card border-danger mb-3">
                <div class="card-header bg-danger text-white">
                    Sản phẩm trong giỏ
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col" class="text-center">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="selectAllItems">
                                    </div>
                                </th>
                                <th scope="col" class="text-start ps-3">Sản phẩm</th>
                                <th scope="col" class="text-center">Số lượng</th>
                                <th scope="col" class="text-end">Giá</th>
                                <th scope="col" class="text-end">Tổng</th>
                                <th scope="col" class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody id="cart-items-body">
                            <!-- Added ID -->
                            <!-- Example Row 1 -->
                            <tr class="cart-item-row">
                                <!-- Added class -->
                                <td class="text-center align-middle">
                                    <div class="form-check">
                                        <input class="form-check-input item-checkbox" type="checkbox"
                                               data-price="30000">
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://i.pinimg.com/736x/04/b6/f9/04b6f958f5f053fbaefccddd1007aa48.jpg"
                                             alt="Cơm gà" class="img-fluid rounded me-3"
                                             style="width: 60px; height: 60px; object-fit: cover;">
                                        <div>
                                            <p class="mb-1 fw-bold">Cơm gà</p>
                                            <small class="text-muted">Kích thước: M | Màu: Đỏ</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="input-group justify-content-center" style="width: 120px;">
                                        <button class="btn btn-outline-danger btn-sm" type="button"
                                                onclick="updateQuantity(this, -1)">
                                            -
                                        </button>
                                        <input type="number"
                                               class="form-control form-control-sm text-center quantity-input"
                                               value="1" min="1" style="max-width: 50px;"
                                               onchange="updateQuantity(this, 0)">
                                        <button class="btn btn-outline-danger btn-sm" type="button"
                                                onclick="updateQuantity(this, 1)">
                                            +
                                        </button>
                                    </div>
                                </td>
                                <td class="text-end price">30.000 đ</td>
                                <td class="text-end total">30.000 đ</td> <!-- Placeholder for total -->
                                <td class="text-center">
                                    <button class="btn btn-sm btn-link text-danger p-0">
                                        <i class="bi bi-trash3 fs-5"></i>
                                    </button>
                                </td>
                            </tr>
                            <!-- Example Row 2 -->
                            <tr class="cart-item-row">
                                <!-- Added class -->
                                <td class="text-center align-middle">
                                    <div class="form-check">
                                        <input class="form-check-input item-checkbox" type="checkbox"
                                               data-price="45000">
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://via.placeholder.com/60/dc3545/ffffff?text=Food"
                                             alt="Phở bò" class="img-fluid rounded me-3"
                                             style="width: 60px; height: 60px; object-fit: cover;">
                                        <p class="mb-0 fw-bold">Phở bò</p>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="input-group justify-content-center" style="width: 120px;">
                                        <button class="btn btn-outline-danger btn-sm" type="button"
                                                onclick="updateQuantity(this, -1)">
                                            -
                                        </button>
                                        <input type="number"
                                               class="form-control form-control-sm text-center quantity-input"
                                               value="2" min="1" style="max-width: 50px;"
                                               onchange="updateQuantity(this, 0)">
                                        <button class="btn btn-outline-danger btn-sm" type="button"
                                                onclick="updateQuantity(this, 1)">
                                            +
                                        </button>
                                    </div>
                                </td>
                                <td class="text-end price">45.000 đ</td>
                                <td class="text-end total">90.000 đ</td> <!-- Placeholder for total -->
                                <td class="text-center">
                                    <button class="btn btn-sm btn-link text-danger p-0">
                                        <i class="bi bi-trash3 fs-5"></i>
                                    </button>
                                </td>
                            </tr>
                            <!-- Example Row 3 -->
                            <tr class="cart-item-row">
                                <!-- Added class -->
                                <td class="text-center align-middle">
                                    <div class="form-check">
                                        <input class="form-check-input item-checkbox" type="checkbox"
                                               data-price="40000">
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://via.placeholder.com/60/dc3545/ffffff?text=Food3"
                                             alt="Bún chả" class="img-fluid rounded me-3"
                                             style="width: 60px; height: 60px; object-fit: cover;">
                                        <p class="mb-0 fw-bold">Bún chả</p>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="input-group justify-content-center" style="width: 120px;">
                                        <button class="btn btn-outline-danger btn-sm" type="button"
                                                onclick="updateQuantity(this, -1)">
                                            -
                                        </button>
                                        <input type="number"
                                               class="form-control form-control-sm text-center quantity-input"
                                               value="1" min="1" style="max-width: 50px;"
                                               onchange="updateQuantity(this, 0)">
                                        <button class="btn btn-outline-danger btn-sm" type="button"
                                                onclick="updateQuantity(this, 1)">
                                            +
                                        </button>
                                    </div>
                                </td>
                                <td class="text-end price">40.000 đ</td>
                                <td class="text-end total">40.000 đ</td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-link text-danger p-0">
                                        <i class="bi bi-trash3 fs-5"></i>
                                    </button>
                                </td>
                            </tr>
                            <!-- Example Row 13 -->
                            <tr class="cart-item-row cart-item-hidden">
                                <!-- Changed hidden to cart-item-hidden -->
                                <td class="text-center align-middle">
                                    <div class="form-check">
                                        <input class="form-check-input item-checkbox" type="checkbox"
                                               data-price="48000">
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://via.placeholder.com/60/dc3545/ffffff?text=Food13"
                                             alt="Cao lầu" class="img-fluid rounded me-3"
                                             style="width: 60px; height: 60px; object-fit: cover;">
                                        <p class="mb-0 fw-bold">Cao lầu</p>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="input-group justify-content-center" style="width: 120px;">
                                        <button class="btn btn-outline-danger btn-sm" type="button"
                                                onclick="updateQuantity(this, -1)">
                                            -
                                        </button>
                                        <input type="number"
                                               class="form-control form-control-sm text-center quantity-input"
                                               value="1" min="1" style="max-width: 50px;"
                                               onchange="updateQuantity(this, 0)">
                                        <button class="btn btn-outline-danger btn-sm" type="button"
                                                onclick="updateQuantity(this, 1)">
                                            +
                                        </button>
                                    </div>
                                </td>
                                <td class="text-end price">48.000 đ</td>
                                <td class="text-end total">48.000 đ</td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-link text-danger p-0">
                                        <i class="bi bi-trash3 fs-5"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- See More Button Container -->
                <div id="see-more-container" class="text-center p-2 border-top">
                    <button id="see-more-btn" class="btn btn-sm btn-outline-danger">Xem thêm sản phẩm</button>
                </div>
            </div>
        </div>

        <!-- Cart Summary -->
        <div class="col-lg-4">
            <!-- Added id="cart-summary-card" -->
            <div id="cart-summary-card" class="card border-danger shadow-sm mb-3">
                <div class="card-header bg-danger text-white">
                    <strong>Tổng cộng</strong> <!-- Made header bold -->
                </div>
                <div class="card-body p-4">
                    <!-- Increased padding -->
                    <div class="mb-4">
                        <label for="discountCode" class="form-label fw-semibold">Mã giảm giá</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="discountCode"
                                   placeholder="Nhập mã giảm giá">
                            <button class="btn btn-danger" type="button" data-bs-toggle="modal"
                                    data-bs-target="#discountModal">
                                <i class="bi bi-ticket-perforated me-1"></i>Chọn mã
                            </button>
                        </div>
                    </div>
                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-2">
                            Tạm tính
                            <span id="subtotal">120.000 đ</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0 pb-2">
                            Phí vận chuyển
                            <span>Miễn phí</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pt-2 mb-3">
                            <div>
                                <strong class="fs-5">Tổng tiền</strong>
                                <p class="mb-0 text-muted small">(Đã bao gồm VAT)</p>
                            </div>
                            <strong class="text-danger fs-5"><span id="grand-total">120.000 đ</span></strong>
                        </li>
                    </ul>
                    <div class="mb-4 border-top pt-3">
                        <label class="form-label fw-semibold mb-2">Địa chỉ giao hàng</label>
                        <div>
                            <select class="form-select" id="addressSelect">
                                <option value="1" selected>
                                    Nguyễn Văn A - 123 Đường ABC, Phường XYZ, Quận 1, TP.
                                    HCM
                                </option>
                                <option value="2">
                                    Nguyễn Văn A - 456 Đường DEF, Phường UVW, Quận 2, TP. HCM
                                </option>
                                <option value="3">
                                    Nguyễn Văn A - 789 Đường GHI, Phường RST, Quận 3, TP. HCM
                                </option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-4 border-top pt-3">
                        <label class="form-label fw-semibold mb-3">Phương thức thanh toán</label>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="paymentMoMo"
                                   value="momo" checked>
                            <label class="form-check-label d-flex align-items-center" for="paymentMoMo">
                                <!-- Added d-flex -->
                                <img src="https://upload.wikimedia.org/wikipedia/vi/f/fe/MoMo_Logo.png"
                                     alt="MoMo" height="24" class="me-2"> <!-- Increased height -->
                                <span>MoMo</span>
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="paymentVNPay"
                                   value="vnpay">
                            <label class="form-check-label d-flex align-items-center" for="paymentVNPay">
                                <img src="https://vnpay.vn/s1/statics.vnpay.vn/logo-vnpay-qr-1.png" alt="VNPay"
                                     height="24" class="me-2">
                                <span>VNPay QR</span>
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="paymentCOD"
                                   value="cod">
                            <label class="form-check-label d-flex align-items-center" for="paymentCOD">
                                <!-- Added d-flex -->
                                <i class="bi bi-cash-coin me-2 text-danger fs-5"></i>
                                <!-- Increased icon size -->
                                <span>Thanh toán khi nhận hàng (COD)</span>
                            </label>
                        </div>
                    </div>
                    <div class="d-grid">
                        <button type="button" class="btn btn-danger btn-lg fw-bold">
                            Tiến hành thanh toán
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
