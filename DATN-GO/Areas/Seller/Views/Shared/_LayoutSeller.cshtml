                            <img src="~/images/logo.png" alt="Logo" class="img-fluid" style="max-width: 70%; max-height: 70%;">
                        </div>
                    </a>
                </div>

                <!-- Sidebar Content -->
                <div class="sidebar-left" data-simplebar style="height: 100%;">
                    <ul class="nav sidebar-inner" id="sidebar-menu">

                        <li class="nav-item">
                            <a asp-area="Seller" asp-controller="Home" asp-action="Index"
                               class="sidenav-item-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                                <i class="bi bi-house-door"></i>
                                <span class="nav-text">Cửa hàng</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Seller" asp-controller="Product" asp-action="Product"
                               class="sidenav-item-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Product" ? "active" : "")">
                                <i class="bi bi-box-seam"></i>
                                <span class="nav-text">Sản phẩm</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Seller" asp-controller="Order" asp-action="Order"
                               class="sidenav-item-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Order" ? "active" : "")">
                                <i class="bi bi-cart"></i>
                                <span class="nav-text">Đơn hàng</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Seller" asp-controller="Voucher" asp-action="Voucher"
                               class="sidenav-item-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Voucher" ? "active" : "")">
                                <i class="bi bi-ticket-perforated"></i>
                                <span class="nav-text">Ưu đãi</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="Seller" asp-controller="PostArticle" asp-action="PostArticle"
                               class="sidenav-item-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "PostArticle" ? "active" : "")">
                                <i class="bi bi-newspaper"></i>
                                <span class="nav-text">Bài viết</span>
                            </a>
                        </li>

                        @* <li class="nav-item">
                            <a asp-area="Seller" asp-controller="Chat" asp-action="Chat"
                               class="sidenav-item-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Chat" ? "active" : "")">
                                <i class="bi bi-chat-dots"></i>
                                <span class="nav-text">Tin nhắn</span>
                            </a>
                        </li> *@

                    </ul>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        @RenderBody()
