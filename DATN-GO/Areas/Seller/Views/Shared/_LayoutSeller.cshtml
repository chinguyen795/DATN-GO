<!doctype html>
<html lang="en">
<head>
    <title>Seller Dashboard</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/SellerStyle.css" />
    <link rel="stylesheet" href="~/css/ChatStyle.css" />
</head>

<body class="bg-light">
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar bg-danger position-fixed" id="sidebar">
            <div class="sidebar-header p-2 border-bottom border-light">
                <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center text-white text-decoration-none">
                    <img src="~/images/logo.png" alt="Logo" height="70" class="me-2">
                </a>
            </div>
            <div class="sidebar-content p-3">
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item mb-2">
                        <a asp-area="Seller" asp-controller="Home" asp-action="Index" class="nav-link border-1 mt-1 text-white">
                            <i class="bi bi-house-door me-2"></i>
                            Cửa hàng
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a asp-area="Seller" asp-controller="Food" asp-action="Food" class="nav-link border-1 mt-1 text-white">
                            <i class="bi bi-box-seam me-2"></i>
                            Sản phẩm
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a asp-area="Seller" asp-controller="Order" asp-action="Order" class="nav-link border-1 mt-1 text-white">
                            <i class="bi bi-cart me-2"></i>
                            Đơn hàng
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a asp-area="Seller" asp-controller="Category" asp-action="Category" class="nav-link border-1 mt-1 text-white">
                            <i class="bi bi-view-list me-2"></i>
                            Danh mục
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a asp-area="Seller" asp-controller="Chat" asp-action="Chat" class="nav-link border-1 mt-1 text-white">
                            <i class="bi bi-chat-dots me-2"></i>
                            Tin nhắn
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a asp-area="Seller" asp-controller="PostArticle" asp-action="PostArticle" class="nav-link border-1 mt-1 text-white">
                            <i class="bi bi-postcard me-2"></i>
                            Bài viết
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a asp-area="Seller" asp-controller="Voucher" asp-action="Voucher" class="nav-link border-1 mt-1 text-white">
                            <i class="bi bi-ticket-perforated me-2"></i>
                            Ưu đãi
                        </a>
                    </li>
                   
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content flex-grow-1">
            <!-- Header -->
            <header class="bg-danger shadow-sm position-fixed">
                <div class="container-fluid">
                    <div class="d-flex justify-content-between align-items-center py-3">
                        <button class="btn text-white border-0" id="sidebarToggle">
                            <i class="bi bi-list fs-4"></i>
                        </button>
                        <div class="d-flex align-items-center">
                            <div class="dropdown">
                                <button class="btn text-white border-0 dropdown-toggle d-flex align-items-center" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle fs-5 me-2"></i>
                                    <span>Seller Name</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Hồ sơ</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Main Content Area -->
            <main class="my-2">
                @RenderBody();
            </main>
        </div>
    </div>


    <!-- Bootstrap JavaScript Libraries -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/popper.js/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
    <script src="~/js/Food.js"></script>
    <script src="~/js/sidebar.js"></script>

</body>
</html>
