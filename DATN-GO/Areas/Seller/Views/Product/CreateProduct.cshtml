                    Price: parseFloat(row.querySelector('.variant-price')?.value || "0"),
                    CostPrice: parseFloat(row.querySelector('.variant-cost-price')?.value || "0"),
                    Quantity: parseInt(row.querySelector('.variant-quantity')?.value || "0"),
