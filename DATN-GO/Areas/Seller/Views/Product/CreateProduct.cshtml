    // Sửa đổi hàm uploadVariantImage
    async function uploadVariantImage(input, uniqueKey, originalKey, rowIndex) {
        if (!input.files || !input.files[0]) return;

        console.log(`Uploading image for row ${rowIndex}, uniqueKey: ${uniqueKey}, originalKey: ${originalKey}`);

        const file = input.files[0];

        // Đảm bảo chọn đúng preview div cho row này
        const previewDiv = document.getElementById(`imgPreview-${uniqueKey}`);
        if (!previewDiv) {
            console.error(`Preview div not found for uniqueKey: ${uniqueKey}`);
            return;
        }

        // Kiểm tra row index
        const previewRowIndex = previewDiv.getAttribute('data-row-index');
        if (previewRowIndex != rowIndex) {
            console.error(`Row index mismatch. Expected: ${rowIndex}, Found: ${previewRowIndex}`);
            return;
        }

        // Hiển thị preview ngay lập tức (base64)
        const reader = new FileReader();
        reader.onload = function (e) {
            previewDiv.innerHTML = `
                    <div style="position: relative;">
                        <img src="${e.target.result}"
                             style="width: 100px; height: 100px; object-fit: cover; border-radius: 8px; box-shadow: 0 2px 8px #0001;" />
                        <button type="button" class="btn btn-sm btn-primary"
                            style="position: absolute; top: 2px; right: 2px; width: 24px; height: 24px; padding: 0; border-radius: 50%;"
                            onclick="triggerFileInput('${uniqueKey}')">
                            <i class="mdi mdi-pencil" style="font-size: 12px;"></i>
                        </button>
                        <div id="uploadStatus-${uniqueKey}"
                             style="position: absolute; bottom: 2px; left: 50%; transform: translateX(-50%); font-size: 10px; color: orange;">
                             Uploading...
                        </div>
                    </div>
                `;
        };
        reader.readAsDataURL(file);

        // Upload lên server
        try {
            const formData = new FormData();
            formData.append('file', file);

            const res = await fetch('/Upload/VariantImage', {
                method: 'POST',
                body: formData
            });

            const data = await res.json();

            if (data.success) {
                previewDiv.innerHTML = `
                        <div style="position: relative;">
                            <img src="${data.url}"
                                 style="width: 100px; height: 100px; object-fit: cover; border-radius: 8px; box-shadow: 0 2px 8px #0001;" />
                            <button type="button" class="btn btn-sm btn-primary"
                                style="position: absolute; top: 2px; right: 2px; width: 24px; height: 24px; padding: 0; border-radius: 50%;"
                                onclick="triggerFileInput('${uniqueKey}')">
                                <i class="mdi mdi-pencil" style="font-size: 12px;"></i>
                            </button>
                        </div>
                    `;

                // Lưu ảnh với originalKey (để có thể share giữa các variant giống nhau)
                variantImages[originalKey] = data.url;

                console.log(`Image uploaded successfully for row ${rowIndex}, saved with key: ${originalKey}`);
            } else {
                alert(data.message || 'Upload thất bại');
                delete variantImages[originalKey];
            }
        } catch (err) {
            console.error('Upload error:', err);
            alert('Lỗi khi upload ảnh');
            delete variantImages[originalKey];
        } finally {
            // Reset input sau khi xử lý xong
            input.value = "";
        }
    }

    // Giữ nguyên function previewImage cho ảnh chính
    function previewImage(input) {
        const preview = document.getElementById('preview');
        const previewDiv = document.getElementById('imagePreview');
        const uploadContent = document.getElementById('uploadContent');
        const dropZone = document.getElementById('dropZone');

        if (input.files && input.files[0]) {
            const reader = new FileReader();

            reader.onload = function (e) {
                preview.src = e.target.result;
                previewDiv.classList.remove('d-none');
                previewDiv.classList.add('d-block');
                uploadContent.classList.add('d-none');
                dropZone.classList.add('bg-white');
                dropZone.classList.remove('bg-light');
            }

            reader.readAsDataURL(input.files[0]);
        }
    }
    function removeImage(event) {
        event.stopPropagation();
        const input = document.getElementById('productImage');
        const preview = document.getElementById('preview');
        const previewDiv = document.getElementById('imagePreview');
        const uploadContent = document.getElementById('uploadContent');
        const dropZone = document.getElementById('dropZone');

        // Xóa hình ảnh và reset lại UI
        input.value = ''; // Reset file input
        preview.src = '#'; // Reset image preview
        previewDiv.classList.add('d-none'); // Ẩn ảnh
        previewDiv.classList.remove('d-block');
        uploadContent.classList.remove('d-none'); // Hiển thị lại icon upload
        dropZone.classList.remove('bg-white');
        dropZone.classList.add('bg-light');
    }

    // Kiểm tra và hiển thị lại các section không phải biến thể nếu cần
