
﻿@{
    Layout = "~/Areas/Seller/Views/Shared/_LayoutSeller.cshtml";
    var products = ViewBag.Products as List<DATN_GO.Models.Products>;
    var categoryNames = ViewBag.CategoryNames as Dictionary<int, string>;
}

<div class="page-wrapper">

    <!-- Header -->
    <header class="main-header" id="header">
        <nav class="navbar navbar-expand-lg navbar-light" id="navbar">
            <!-- Sidebar toggle button -->
            <button id="sidebar-toggler" class="sidebar-toggle">
                <span class="sr-only">Toggle navigation</span>
            </button>

            <span class="page-title">SẢN PHẨM</span>

            <div class="navbar-right ">

                <ul class="nav navbar-nav">
                    <li class="custom-dropdown">
                        <a asp-area="Seller" asp-controller="Notification" asp-action="Notification" class="notify-toggler custom-dropdown-toggler">
                            <i class="mdi mdi-bell-outline icon"></i>
                        </a>
                    </li>
                    <!-- User Account -->
                    <li class="dropdown user-menu">
                        <button class="dropdown-toggle nav-link" data-toggle="dropdown">
                            <img src="@ViewBag.UserAvatar" alt="User Profile" width="32" height="32"
                                 style="object-fit: cover;" loading="lazy">
                            <span class="d-none d-lg-inline-block">@ViewBag.UserName</span>

                        </button>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li>
                                <a class="dropdown-link-item" href="user-profile.html">
                                    <i class="mdi mdi-account-outline"></i>
                                    <span class="nav-text">Hồ Sơ</span>
                                </a>
                            </li>
                            <li class="dropdown-footer">
                                <a class="dropdown-link-item" href="sign-in.html">
                                    <i class="mdi mdi-logout"></i> Đăng Xuất
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>


    </header>

    <!-- ====================================
    ——— CONTENT WRAPPER
    ===================================== -->
    <div class="content-wrapper">
        <div class="content">
            <!-- For Components documentaion -->
            <!-- Products Inventory -->
            <div class="card card-default">
                <div class="card-header">
                    <h2>Danh sách sản phẩm</h2>
                    <div class="btn-group">
                        <a href="@Url.Action("CreateProduct", "Product", new { area = "Seller" })" class="btn btn-danger" style="text-transform: capitalize;">
                            <i class="bi bi-plus-circle-fill"></i> Thêm sản phẩm
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <table id="productsTable" class="table table-hover table-product" style="width:100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Ảnh sản phẩm</th>
                                <th>Tên sản phẩm</th>
                                <th>Danh mục</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (products != null && products.Any())
{
                            @foreach (var item in products)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td class="py-0">
                                        <img src="@item.MainImage" alt="Product Image" style="width: 50px; height: 50px;">
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@(ViewBag.CategoryNames[item.Id])</td>
                                    <td>
                                        @switch (item.Status)
                                        {
                                            case ProductStatus.Pending:
                                                <span class="badge badge-warning">Chờ duyệt</span>
                                                break;
                                            case ProductStatus.Approved:
                                                <span class="badge badge-success">Đã duyệt</span>
                                                break;
                                            default:
                                                <span class="badge badge-light">Không rõ</span>
                                                break;
                                        }

                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <a class="dropdown-toggle icon-burger-mini" href="#" role="button"
                                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item btn-detail" href="#" data-toggle="modal"
                                                   data-target="#exampleModallarge"
                                                   data-product-id="@item.Id">Chi tiết sản phẩm</a>
                                                <a class="dropdown-item" href="#">Sửa</a>
                                                <a class="dropdown-item btn-delete" href="#" data-toggle="modal"
                                                   data-target="#deleteConfirmModal"
                                                   data-product-id="@item.Id">Xóa</a>

                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                }}
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted">Không có sản phẩm nào</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Modal chi tiết-->
<div class="modal fade" id="exampleModallarge" tabindex="-1" role="dialog" aria-labelledby="exampleModalLarge"
     aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title text-white" id="exampleModalLabel">Chi Tiết Sản Phẩm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
            <div class="modal-body">
                <div class="row">
                    <div class="col-xl-4">
                        <p class="text-dark font-weight-medium pt-4 mb-2">Tên sản phẩm</p>
                        <p id="modal-name"></p>
                    </div>
                    <div class="col-xl-4">
                        <p class="text-dark font-weight-medium pt-4 mb-2">Xuất xứ</p>
                        <p id="modal-origin"></p>
                    </div>
                    <div class="col-xl-4">
                        <p class="text-dark font-weight-medium pt-4 mb-2">Thương hiệu</p>
                        <p <span id="modal-brand"></p>
                    </div>

                    <div class="col-xl-4">
                        <p class="text-dark font-weight-medium pt-4 mb-2">Số lượng</p>
                        <p id="modal-totalQuantity"></p>
                    </div>
                    <div class="col-xl-4">
                        <p class="text-dark font-weight-medium pt-4 mb-2">Giá bán</p>
                        <p id="modal-price"></p>
                    </div>
                    <div class="col-xl-4">
                        <p class="text-dark font-weight-medium pt-4 mb-2">Ngày tạo</p>
                        <p id="modal-createAt"></p>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Variant 1</th>
                                <th scope="col">Variant 2</th>
                                <th scope="col">Giá vốn</th>
                                <th scope="col">Giá bán</th>
                                <th scope="col">Số lượng</th>
                                <th scope="col">Khối lượng (Grams)</th>
                                <th scope="col">Kích thước (Dài x Rộng x Cao) cm</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="col">Không có biến thể</th>
                            </tr>
                        </tbody>
                    </table>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light btn-pill" data-dismiss="modal" style="text-transform: capitalize;">Đóng</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal sửa -->
<div class="modal fade" id="editProductModal" tabindex="-1" role="dialog" aria-labelledby="editProductModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-header bg-danger">
                <h5 class="modal-title text-white" id="exampleModalLabel">Sửa Sản Phẩm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form id="editProductForm">
                    <div class="form-group">
                        <label for="productName">Tên sản phẩm</label>
                        <input type="text" class="form-control" id="productName" value="Áo thun nam">
                    </div>

                    <div class="form-group">
                        <label for="productCategory">Danh mục</label>
                        <select class="form-control" id="productCategory">
                            <option selected>Thời trang nam</option>
                            <option>Thời trang nữ</option>
                            <option>Phụ kiện</option>
                            <option>Khác</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="productQuantity">Số lượng</label>
                        <input type="number" class="form-control" id="productQuantity" value="100">
                    </div>

                    <div class="form-group">
                        <label for="productPrice">Giá bán</label>
                        <input type="text" class="form-control" id="productPrice" value="299000">
                    </div>

                    <div class="form-group">
                        <label>Trạng thái</label><br>
                        <label class="switch switch-text switch-outline-alt-danger switch-pill form-control-label mr-2">
                            <input type="checkbox" class="switch-input form-check-input" id="productStatus" checked>
                            <span class="switch-label"></span>
                            <span class="switch-handle"></span>
                        </label>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-light btn-pill" data-dismiss="modal" style="text-transform: capitalize;">Đóng</button>
                <button type="button" class="btn btn-danger btn-pill" onclick="submitProductEdit()" style="text-transform: capitalize;">
                    Lưu thay
                    đổi
                </button>
            </div>

        </div>
    </div>
</div>


<!-- Modal xác nhận xóa -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title text-white">Xác nhận xóa</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa sản phẩm này và toàn bộ thông tin liên quan không?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light btn-pill" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-danger btn-pill" id="confirmDeleteBtn">Xóa</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- DataTables Initialization Script -->
<script>
        let productIdToDelete = null;

    // Khi click vào nút "Xóa"
    $(document).on("click", ".btn-delete", function () {
        productIdToDelete = $(this).data("product-id");
    });

    // Khi xác nhận xóa
    $("#confirmDeleteBtn").click(function () {
        if (!productIdToDelete) return;

        $.ajax({
            url: `/Seller/Product/DeleteProduct/${productIdToDelete}`,
            type: 'DELETE',
            success: function (res) {
                $('#deleteConfirmModal').modal('hide');
                alert("Xóa sản phẩm thành công.");
                location.reload(); // Load lại trang
            },
            error: function () {
                alert("Xóa sản phẩm thất bại.");
            }
        });
    });

    $(document).on('hidden.bs.modal', '.modal', function () {
        if ($('.modal.show').length === 0) {
            $('body').removeClass('modal-open');
            $('.modal-backdrop').remove();
        }
    });
    $(document).ready(function () {
        $(".btn-detail").click(function (e) {
    e.preventDefault();
    var productId = $(this).data("product-id");

    $.ajax({
        url: 'https://localhost:7180/Seller/Product/GetProductDetail/' + productId,
        type: 'GET',
        success: function (data) {
            $("#modal-name").text(data.name || "");
            $("#modal-origin").text(data.placeoforigin || "");
            $("#modal-brand").text(data.brand || "");
            $("#modal-totalQuantity").text(data.totalQuantity || 0);
            $("#modal-price").text(data.price > 0 ? data.price.toLocaleString() + "đ" : "Chưa có giá");
            $("#modal-createAt").text(data.createat || "");

            var thead = $("#exampleModallarge table thead");
            thead.html(`
                <tr>
                    <th>${data.variantName1 || "Biến thể 1"}</th>
                    <th>${data.variantName2 || "Biến thể 2"}</th>
                    <th>Giá vốn</th>
                    <th>Giá bán</th>
                    <th>Số lượng</th>
                    <th>Khối lượng (Grams)</th>
                    <th>Kích thước (Dài x Rộng x Cao) cm</th>
                    <th>Ảnh</th>
                </tr>
            `);

            var tbody = $("#exampleModallarge table tbody");
            tbody.empty();

            if (data.variants && data.variants.length > 0) {
                data.variants.forEach(function (v) {
                    var row = `
                        <tr>
                            <td>${v.variantValue1 || ""}</td>
                            <td>${v.variantValue2 || ""}</td>
                            <td>${v.costPrice.toLocaleString()}đ</td>
                            <td>${v.price.toLocaleString()}đ</td>
                            <td>${v.quantity}</td>
                            <td>${v.weight}g</td>
                            <td>${v.length}cm x ${v.width}cm x ${v.height}cm</td>
                            <td><img src="${v.image}" style="width: 50px; height: 50px;" /></td>
                        </tr>
                    `;
                    tbody.append(row);
                });
            } else {
                tbody.html(`<tr><td colspan="8" class="text-center">Không có biến thể</td></tr>`);
            }
        },
        error: function () {
            alert("Không thể lấy dữ liệu sản phẩm.");
        }
    });
});

    });
</script>
