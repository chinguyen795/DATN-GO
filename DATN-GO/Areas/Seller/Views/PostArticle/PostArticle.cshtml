

@{
    Layout = "~/Areas/Seller/Views/Shared/_LayoutSeller.cshtml";
}
<div class="page-wrapper">

    <!-- Header -->
    <header class="main-header" id="header">
        <nav class="navbar navbar-expand-lg navbar-light" id="navbar">
            <!-- Sidebar toggle button -->
            <button id="sidebar-toggler" class="sidebar-toggle">
                <span class="sr-only">Toggle navigation</span>
            </button>

            <span class="page-title">ĐĂNG BÀI</span>

            <div class="navbar-right ">

                <ul class="nav navbar-nav">
                    <li class="custom-dropdown">
                        <a asp-area="Seller" asp-controller="Notification" asp-action="Notification" class="notify-toggler custom-dropdown-toggler">
                            <i class="mdi mdi-bell-outline icon"></i>
                        </a>
                    </li>
                    <!-- User Account -->
                    <li class="dropdown user-menu">
                        <button class="dropdown-toggle nav-link" data-toggle="dropdown">
                            <img src="~/images/avt-user.jpg" alt="User Profile" width="32" height="32"
                                 style="object-fit: cover;" loading="lazy">
                            <span class="d-none d-lg-inline-block">Meo Meo</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li>
                                <a class="dropdown-link-item" href="user-profile.html">
                                    <i class="mdi mdi-account-outline"></i>
                                    <span class="nav-text">Hồ Sơ</span>
                                </a>
                            </li>
                            <li class="dropdown-footer">
                                <a class="dropdown-link-item" href="sign-in.html">
                                    <i class="mdi mdi-logout"></i> Đăng Xuất
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>


    </header>

    <!-- ====================================
    ——— CONTENT WRAPPER
    ===================================== -->
    <div class="content-wrapper">
        <div class="content">
            <div class="container">
                <!-- Create Post Card -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body p-4">
                        <div class="d-flex mb-4">
                            <img src="images/user/user-xs-01.jpg" class="rounded-circle me-3 border shadow-sm"
                                 alt="Người dùng" width="50" height="50"
                                 style="object-fit: cover; margin-right: 10px;">
                            <div class="flex-grow-1">
                                <textarea class="form-control border-0 bg-light shadow-sm"
                                          placeholder="Nội dung bài viết..." rows="4"
                                          style="resize: none; border-radius: 15px;"></textarea>
                            </div>
                        </div> <!-- Media Previews -->
                        <div class="media-previews mb-4">
                            <!-- Image Preview -->
                            <div id="imagePreview" class="preview-item mb-3 d-none">
                                <div class="position-relative">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-image text-success me-2"></i>
                                        <span class="text-muted small">Hình ảnh đính kèm</span>
                                        <button type="button" class="btn btn-sm btn-light ms-auto"
                                                onclick="removeImage()">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                    <div class="preview-content position-relative">
                                        <img src="" alt="Preview" class="img-fluid rounded shadow-sm w-100"
                                             style="max-height: 300px; object-fit: cover;">
                                    </div>
                                </div>
                            </div>

                            <!-- Video Preview -->
                            <div id="videoPreview" class="preview-item mb-3 d-none">
                                <div class="position-relative">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-film text-primary me-2"></i>
                                        <span class="text-muted small">Video đính kèm</span>
                                        <button type="button" class="btn btn-sm btn-light ms-auto"
                                                onclick="removeVideo()">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                    <div class="preview-content position-relative">
                                        <video id="videoPlayer" controls class="w-100 rounded shadow-sm"
                                               style="max-height: 300px;">
                                            <source src="" type="video/mp4">
                                            Trình duyệt của bạn không hỗ trợ video.
                                        </video>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="border-top pt-4">
                            <div class="row g-4 align-items-center">
                                <div class="col-auto">
                                    <label for="imageInput"
                                           class="btn btn-light rounded-circle p-3 d-flex align-items-center justify-content-center shadow-sm"
                                           data-bs-toggle="tooltip" title="Thêm ảnh">
                                        <i class="fas fa-image fs-5 text-success"></i>
                                    </label>
                                </div>
                                <div class="col-auto">
                                    <button class="btn btn-light rounded-circle p-3 d-flex align-items-center justify-content-center shadow-sm"
                                            data-media-type="video" data-bs-toggle="tooltip" title="Thêm video">
                                        <i class="fas fa-film fs-5 text-primary"></i>
                                    </button>
                                </div>
                                <!-- <div class="col-auto">
                                    <button
                                        class="btn btn-light rounded-circle p-3 d-flex align-items-center justify-content-center shadow-sm"
                                        data-bs-toggle="tooltip" title="Thêm tag">
                                        <i class="fas fa-hashtag fs-5 text-info"></i>
                                    </button>
                                </div> -->
                                <div class="col ms-auto">
                                    <button class="btn btn-danger w-100 py-2 px-4 d-flex align-items-center justify-content-center gap-2 shadow-sm" style="text-transform: capitalize;">
                                        <span class="fw-semibold">Đăng Bài</span>
                                    </button>
                                </div>
                            </div>
                            <input type="file" id="imageInput" accept="image/*" class="d-none"
                                   onchange="previewImage(this)">
                        </div>
                    </div>
                </div> <!-- Search + Filter -->
                <div class="d-flex flex-column flex-md-row gap-3 mb-4 align-items-md-center justify-content-between">
                    <div style="width: 300px;">
                        <input type="search" class="form-control search-input"
                               placeholder="Tìm kiếm bài viết..." aria-label="Tìm kiếm">
                    </div>
                    <div style="width: 200px;">
                        <select class="form-select w-100">
                            <option value="">Sắp xếp theo</option>
                            <option value="newest">Mới nhất</option>
                            <option value="oldest">Cũ nhất</option>
                        </select>
                    </div>
                </div>
                <!-- Articles List -->
                <div class="articles-list">

                    <!-- Article Card Template -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="d-flex align-items-center">
                                    <img src="https://upload.wikimedia.org/wikipedia/commons/9/96/Carassius_wild_golden_fish_2013_G1.jpg"
                                         class="rounded-circle me-3" width="45" height="45" alt="Author">
                                    <div>
                                        <h6 class="mb-1 fw-bold">Tên người bán</h6>
                                        <small class="text-muted">⏱ 2 giờ trước</small>
                                    </div>
                                </div>
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-outline-warning d-flex align-items-center">
                                        <i class="fas fa-edit me-1"></i> <span class="d-none d-md-inline">Sửa</span>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger d-flex align-items-center"
                                            data-toggle="modal" data-target="#deleteConfirmModal">
                                        <i class="fas fa-trash me-1"></i>
                                        <span class="d-none d-md-inline">Xoá</span>
                                    </button>
                                </div>
                            </div>
                            <p class="mb-3">Nội dung bài viết mẫu...</p>
                            <div class="text-center">
                                <img src="https://upload.wikimedia.org/wikipedia/commons/9/96/Carassius_wild_golden_fish_2013_G1.jpg"
                                     class="img-fluid rounded" style="max-height: 400px; object-fit: contain;"
                                     alt="Article image">
                            </div>
                        </div>
                    </div>

                    <!-- Another Article -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="d-flex align-items-center">
                                    <img src="https://source.unsplash.com/random/40x40?portrait"
                                         class="rounded-circle me-3" width="45" height="45" alt="Author">
                                    <div>
                                        <h6 class="mb-1 fw-bold">Tên người bán khác</h6>
                                        <small class="text-muted">⏱ 5 giờ trước</small>
                                    </div>
                                </div>
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-outline-warning d-flex align-items-center">
                                        <i class="fas fa-edit me-1"></i> <span class="d-none d-md-inline">Sửa</span>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger d-flex align-items-center"
                                            data-toggle="modal" data-target="#deleteConfirmModal" data-id="2"
                                            title="Xóa">
                                        <i class="fas fa-trash me-1"></i>
                                        <span class="d-none d-md-inline">Xoá</span>
                                    </button>
                                </div>
                            </div>
                            <p class="mb-3">Nội dung của bài viết khác...</p>
                            <div class="text-center">
                                <img src="https://source.unsplash.com/random/800x400" class="img-fluid rounded"
                                     style="max-height: 300px; object-fit: contain;" alt="Article image">
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

