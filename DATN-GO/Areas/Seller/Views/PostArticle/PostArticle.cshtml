<div class="container-fluid py-4">
    <!-- Create Post Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">Tạo bài viết mới</h5>
            <div class="d-flex align-items-start mb-3">
                <img src="https://source.unsplash.com/random/50x50?portrait" class="rounded-circle me-2" alt="Người dùng" style="width: 50px; height: 50px;">
                <div class="flex-grow-1">
                    <textarea class="form-control" placeholder="Nội dung bài viết..." rows="3" style="resize: none;"></textarea>
                </div>
            </div>

            <!-- Image Preview Container -->
            <div id="imagePreview" class="mb-3 d-none">
                <div class="position-relative">
                    <img src="" alt="Preview" class="img-fluid rounded" style="max-height: 300px; width: 100%; object-fit: cover;">
                    <button type="button" class="btn-close position-absolute top-0 end-0 m-2 bg-white rounded-circle"
                            style="padding: 0.5rem;" onclick="removeImage()"></button>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <label for="imageInput" class="btn btn-light mb-0">
                        <i class="fas fa-image text-success"></i> Thêm ảnh
                    </label>
                    <input type="file" id="imageInput" accept="image/*" class="d-none" onchange="previewImage(this)">
                </div>
                <button class="btn btn-danger">Đăng bài</button>
            </div>
        </div>
    </div>

    <!-- Filters Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-center">
                <div class="col-12 col-md-4">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Tìm kiếm bài viết...">
                        <button class="btn btn-danger" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <select class="form-select">
                        <option value="">Sắp xếp theo thời gian</option>
                        <option value="newest">Mới nhất</option>
                        <option value="oldest">Cũ nhất</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Articles List -->
    <div class="articles-list">
        <!-- Sample Article Card -->
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="d-flex align-items-center">
                        <img src="https://source.unsplash.com/random/40x40?portrait" class="rounded-circle me-2" alt="Author" style="width: 40px; height: 40px;">
                        <div>
                            <h6 class="mb-0">Tên người bán</h6>
                            <small class="text-muted">2 giờ trước</small>
                        </div>
                    </div>
                    <div class="btn-group">
                        <button class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" title="Xóa">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
                <p class="card-text">Nội dung bài viết mẫu...</p>
                <img src="https://source.unsplash.com/random/800x400" class="img-fluid rounded mb-3" alt="Article image">
            </div>
        </div>

        <!-- Another Sample Article Card -->
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="d-flex align-items-center">
                        <img src="https://source.unsplash.com/random/40x40?portrait" class="rounded-circle me-2" alt="Author" style="width: 40px; height: 40px;">
                        <div>
                            <h6 class="mb-0">Tên người bán khác</h6>
                            <small class="text-muted">5 giờ trước</small>
                        </div>
                    </div>
                    <div class="btn-group">
                        <button class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" title="Xóa">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
                <p class="card-text">Nội dung của bài viết khác...</p>
                <img src="https://source.unsplash.com/random/800x400" class="img-fluid rounded mb-3" alt="Article image">
            </div>
        </div>
    </div>
</div>