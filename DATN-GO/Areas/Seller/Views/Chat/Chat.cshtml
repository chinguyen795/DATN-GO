<style>
    /* Chat Styles */
    .chat-container {
        height: calc(100vh - 80px);
        margin-top: 80px;
    }

    .seller-list {
        height: calc(100vh - 220px);
        overflow-y: auto;
    }

    .seller-item {
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .seller-item:hover {
            background-color: rgba(220, 53, 69, 0.1);
        }

        .seller-item.active {
            background-color: rgba(220, 53, 69, 0.2);
        }

    /* Status indicators */
    .status {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        position: absolute;
        bottom: 0;
        right: 0;
        border: 2px solid #fff;
    }

        .status.active {
            background-color: #28a745;
        }

        .status.away {
            background-color: #ffc107;
        }

    /* Chat Messages Area */
    .chat-messages {
        height: calc(100vh - 300px);
        /* 300px = header + footer + margin an toàn */
        overflow-y: auto;
        padding-bottom: 100px;
    }

    .media-chat {
        display: flex;
        align-items: flex-start;
        margin-bottom: 1rem;
        padding: 0.5rem;
    }

    .chat-name {
        font-size: 0.85rem;
        margin-bottom: 0.25rem;
    }

        .chat-name.seller {
            color: #dc3545;
        }

        .chat-name.customer {
            color: #6c757d;
        }

    .media-chat.media-chat-reverse {
        flex-direction: row-reverse;
        text-align: right;
    }

    .chat-message-receive,
    .chat-message-send {
        max-width: 70%;
        margin-bottom: 0.5rem;
        padding: 0.75rem;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .chat-message-receive {
        background-color: #ffffff;
        border-radius: 20px 20px 20px 5px;
    }

    .chat-message-send {
        background-color: #dc3545;
        color: white;
        margin-left: auto;
        border-radius: 20px 20px 5px 20px;
    }

    .chat-timestamp {
        font-size: 0.75rem;
        display: block;
        margin-top: 0.25rem;
    }

    /* Chat Input Area */
    .chat-input-area {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 1rem;
        background-color: #fff;
        border-top: 1px solid #dee2e6;
    }

    /* Scrollbar Customization */
    ::-webkit-scrollbar {
        width: 6px;
    }

    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    ::-webkit-scrollbar-thumb {
        background: #dc3545;
        border-radius: 3px;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: #b02a37;
        }


    /* Badge Styles */
    .badge {
        font-size: 0.75rem;
        padding: 0.25em 0.6em;
    }

    /* Profile Image Position */
    .position-relative {
        position: relative;
    }

    /* Message Content */
    .message-contents {
        width: 100%;
    }

    .last-msg {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 200px;
    }
</style>
