<div class="row justify-content-center mx-auto">
    <div class="card border-0">
        <div class="card-body p-4 p-lg-5">
            <form id="productForm">
                <!-- Product Image Section -->
                <div class="mb-5 border-start border-3 border-danger ps-3">
                    <h3 class="h5 text-danger fw-bold mb-4">Hình Ảnh Sản Phẩm</h3>
                    <div class="mb-4">
                        <label class="form-label fw-medium" for="productImage">
                            Hình Ảnh
                            <span class="text-danger">*</span>
                            <small class="text-muted ms-2">(Tỷ lệ 16:8)</small>
                        </label>
                        <div class="image-upload-container">
                            <div class="preview-container mb-3" style="max-width: 800px; aspect-ratio: 16/8; background-color: #f8f9fa; border: 2px dashed #dee2e6; border-radius: 8px; overflow: hidden;">
                                <img id="imagePreview" src="#" alt="Preview" style="width: 100%; height: 100%; object-fit: cover; display: none;">
                                <div id="uploadPlaceholder" class="d-flex flex-column align-items-center justify-content-center h-100 p-4">
                                    <i class="fas fa-cloud-upload-alt fa-3x text-secondary mb-3"></i>
                                    <small class="text-muted">Kích thước tối đa: 5MB. Định dạng: JPG, PNG</small>
                                </div>
                            </div>
                            <input type="file" class="form-control" id="productImage" accept="image/*" required style="display: none;">
                            <button type="button" class="btn btn-outline-danger" onclick="document.getElementById('productImage').click()">
                                <i class="fas fa-upload me-2"></i>Chọn Hình Ảnh
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Basic Information Section -->
                <div class="mb-5 border-start border-3 border-danger ps-3">
                    <h3 class="h5 text-danger fw-bold mb-4">Thông Tin Cơ Bản</h3>
                    <div class="mb-4">
                        <label class="form-label fw-medium" for="productName">
                            Tên Sản Phẩm
                            <span class="text-danger">*</span>
                        </label>
                        <input type="text" class="form-control" id="productName" required placeholder="Nhập tên sản phẩm">
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-medium">Trạng Thái Sản Phẩm</label>
                        <div class="d-flex gap-4">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="productStatus" id="statusForSale" value="forSale" checked>
                                <label class="form-check-label" for="statusForSale">
                                    <i class="fas fa-shopping-bag text-success me-1"></i>Đăng Bán
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="productStatus" id="statusHidden" value="hidden">
                                <label class="form-check-label" for="statusHidden">
                                    <i class="fas fa-eye-slash text-warning me-1"></i>Ẩn
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Category Selection Section -->
                <div class="mb-5 border-start border-3 border-danger ps-3">
                    <h3 class="h5 text-danger fw-bold mb-4">Phân Loại Sản Phẩm</h3>

                    <!-- Platform Categories -->
                    <div class="bg-light p-3 rounded-3 mb-4">
                        <label class="fw-medium mb-2" for="platformMainCategory">
                            Danh Mục Nền Tảng
                            <span class="text-danger">*</span>
                        </label>
                        <select class="form-select mb-3" id="platformMainCategory" required>
                            <option value="" selected disabled>Chọn danh mục chính</option>
                            <option value="food">Đồ Ăn</option>
                            <option value="drinks">Đồ Uống</option>
                            <option value="groceries">Tạp Hóa</option>
                            <option value="health">Sức Khỏe & Làm Đẹp</option>
                        </select>

                        <div id="foodSubcategories" class="d-none fade">
                            <select class="form-select" required>
                                <option value="" selected disabled>Chọn loại đồ ăn</option>
                                <option value="fast-food">Đồ Ăn Nhanh</option>
                                <option value="traditional">Món Việt Nam</option>
                                <option value="international">Món Quốc Tế</option>
                                <option value="vegetarian">Đồ Chay</option>
                            </select>
                        </div>

                        <div id="drinksSubcategories" class="d-none fade">
                            <select class="form-select" required>
                                <option value="" selected disabled>Chọn loại đồ uống</option>
                                <option value="coffee">Cà Phê</option>
                                <option value="tea">Trà</option>
                                <option value="juice">Nước Ép</option>
                                <option value="soft-drinks">Nước Giải Khát</option>
                            </select>
                        </div>
                    </div>

                    <!-- Shop Categories -->
                    <div class="bg-light p-3 rounded-3">
                        <label class="fw-medium mb-2" for="shopCategory">
                            Danh Mục Cửa Hàng (Tùy chọn)
                        </label>
                        <select class="form-select" id="shopCategory">
                            <option value="" selected disabled>Chọn danh mục cửa hàng</option>
                            <option value="bestsellers">Bán Chạy Nhất</option>
                            <option value="new">Món Mới</option>
                            <option value="special">Món Đặc Biệt</option>
                            <option value="seasonal">Món Theo Mùa</option>
                        </select>
                    </div>
                </div>

                <!-- Price and Inventory Section -->
                <div class="mb-5 border-start border-3 border-danger ps-3">
                    <h3 class="h5 text-danger fw-bold mb-4">Giá & Tồn Kho</h3>
                    <div class="mb-4">
                        <label class="form-label fw-medium" for="price">
                            Giá Bán
                            <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-danger text-white">₫</span>
                            <input type="number" class="form-control" id="price" min="0" step="1000" required placeholder="Nhập giá sản phẩm">
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-medium" for="quantity">
                            Số Lượng Trong Kho
                            <span class="text-danger">*</span>
                        </label>
                        <input type="number" class="form-control" id="quantity" min="0" required placeholder="Nhập số lượng sản phẩm">
                    </div>
                </div>

                <!-- Description Section -->
                <div class="mb-5 border-start border-3 border-danger ps-3">
                    <h3 class="h5 text-danger fw-bold mb-4">Mô Tả Sản Phẩm</h3>
                    <div class="mb-4">
                        <label class="form-label fw-medium" for="description">
                            Chi Tiết Sản Phẩm
                            <span class="text-danger">*</span>
                        </label>
                        <textarea class="form-control" id="description" rows="4" required placeholder="Mô tả chi tiết về sản phẩm của bạn"></textarea>
                    </div>
                </div>

                <!-- Shipping Information -->
                <div class="mb-5 border-start border-3 border-danger ps-3">
                    <h3 class="h5 text-danger fw-bold mb-4">Thông Tin Vận Chuyển</h3>
                    <div class="mb-4">
                        <label class="form-label fw-medium" for="weight">
                            Khối Lượng
                            <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="weight" min="0" step="0.1" required placeholder="Nhập khối lượng sản phẩm">
                            <span class="input-group-text bg-danger text-white">kg</span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-medium" for="shippingUnit">
                            Đơn Vị Vận Chuyển
                            <span class="text-danger">*</span>
                        </label>
                        <select class="form-select" id="shippingUnit" required>
                            <option value="" selected disabled>Chọn đơn vị vận chuyển</option>
                            <option value="standard">Giao Hàng Tiêu Chuẩn</option>
                            <option value="express">Giao Hàng Nhanh</option>
                            <option value="nextDay">Giao Hàng Trong Ngày</option>
                        </select>
                    </div>
                </div>

                <!-- Submit Buttons -->
                <div class="text-end mt-5">
                    <button type="button" class="btn btn-outline-secondary me-2 px-4">Hủy Bỏ</button>
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-plus-circle me-2"></i>Thêm Sản Phẩm
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>