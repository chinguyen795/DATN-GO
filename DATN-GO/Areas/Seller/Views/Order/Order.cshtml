    document.addEventListener('DOMContentLoaded', function () {
        // Lưu trữ các class text color gốc của các tab
        const originalColors = {};
        document.querySelectorAll('#orderTabs .nav-link').forEach(tab => {
            // Lưu lại màu text gốc của mỗi tab
            originalColors[tab.id] = Array.from(tab.classList).find(cls => cls.startsWith('text-'));
        });

        // Xử lý khi tab được click
        document.querySelectorAll('#orderTabs .nav-link').forEach(tab => {
            tab.addEventListener('shown.bs.tab', function () {
                // Restore màu text gốc cho tất cả các tab và xóa background
                document.querySelectorAll('#orderTabs .nav-link').forEach(t => {
                    t.classList.remove('bg-danger', 'text-white');
                    if (originalColors[t.id]) {
                        t.classList.add(originalColors[t.id]);
                    }
                });            // Thêm nền đỏ nhạt và chữ trắng cho tab active
                this.classList.remove(originalColors[this.id]);
                this.classList.add('bg-danger', 'bg-opacity-25', 'text-white');
            });
        });

        // Áp dụng style cho tab active mặc định khi trang load
        const activeTab = document.querySelector('#orderTabs .nav-link.active'); if (activeTab) {
            activeTab.classList.remove(originalColors[activeTab.id]);
            activeTab.classList.add('bg-danger', 'bg-opacity-25', 'text-white');
        }
    });
</script>

<!-- Tab handling script -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Xử lý chuyển tab cho các đơn hàng
        const triggerTabList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tab"]'));
        triggerTabList.forEach(function (triggerEl) {
            triggerEl.addEventListener('click', function (event) {
                event.preventDefault();

                // Remove active class from all tabs
                triggerTabList.forEach(t => {
                    t.classList.remove('active');
                    t.setAttribute('aria-selected', 'false');
                });

                // Add active class to clicked tab
                this.classList.add('active');
                this.setAttribute('aria-selected', 'true');

                // Show corresponding content
                const tabTarget = document.querySelector(this.getAttribute('data-bs-target'));
                const tabContents = document.querySelectorAll('.tab-pane');
                tabContents.forEach(content => {
                    content.classList.remove('show', 'active');
                });
                if (tabTarget) {
                    tabTarget.classList.add('show', 'active');
                }
            });
        });

        // Activate first tab by default if none is active
        const activeTab = document.querySelector('.nav-link.active');
        if (!activeTab && triggerTabList.length > 0) {
            triggerTabList[0].click();
        }
    });
</script>