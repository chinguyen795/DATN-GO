            storeIdToHandle = this.dataset.id;
            currentRow = this.closest('tr');
            $('#approveModal').modal('show');
        });
    });

    document.getElementById('confirmApproveBtn').addEventListener('click', async function () {
        if (storeIdToHandle) {
            const res = await fetch(`/Admin/Store/Approve?id=${storeIdToHandle}`, { method: 'POST' });
            const data = await res.json();
            $('#approveModal').modal('hide');
            showToast(data.message, data.success);
            if (data.success) {
                currentRow.remove();
            }
        }
    });

    // ========== TỪ CHỐI ==========
    document.querySelectorAll('.btn-reject').forEach(btn => {
        btn.addEventListener('click', function () {
            storeIdToHandle = this.dataset.id;
            currentRow = this.closest('tr');
            $('#rejectModal').modal('show');
        });
    });

    document.getElementById('confirmRejectBtn').addEventListener('click', async function () {
        if (storeIdToHandle) {
            const res = await fetch(`/Admin/Store/Reject?id=${storeIdToHandle}`, { method: 'POST' });
            const data = await res.json();
            $('#rejectModal').modal('hide');
            showToast(data.message, data.success);
            if (data.success) {
                currentRow.remove();
            }
        }
    });

    // ========== MODAL CLOSE ==========
    document.querySelectorAll('[data-dismiss="modal"]').forEach(btn => {
        btn.addEventListener('click', function () {
            $('#approveModal, #rejectModal, #imageModal').modal('hide');
        });
    });

    // ========== IMAGE PREVIEW ==========
    document.querySelectorAll('.clickable-image').forEach(img => {
        img.addEventListener('click', function () {
            document.getElementById('modalImage').src = this.dataset.src;
            $('#imageModal').modal('show');
        });
    });
        // ===== CHECK/UNCHECK ALL STORE =====
    document.getElementById('checkAllStores').addEventListener('change', function () {
        const checked = this.checked;
        document.querySelectorAll('.store-checkbox').forEach(cb => cb.checked = checked);
        toggleStoreBulkButtons();
    });

    document.querySelectorAll('.store-checkbox').forEach(cb => {
        cb.addEventListener('change', toggleStoreBulkButtons);
    });

    function toggleStoreBulkButtons() {
        const count = document.querySelectorAll('.store-checkbox:checked').length;
        document.getElementById('bulkStoreButtons').style.display = count > 0 ? 'flex' : 'none';
    }

    // ===== SHOW MODALS =====
    document.querySelector('.btn-approve-all-store').addEventListener('click', function () {
        const count = document.querySelectorAll('.store-checkbox:checked').length;
        if (count === 0) {
            showToast("⚠️ Bạn chưa chọn cửa hàng nào để duyệt.", false);
            return;
        }
        $('#bulkApproveStoreModal').modal('show');
    });

    document.querySelector('.btn-reject-all-store').addEventListener('click', function () {
        const count = document.querySelectorAll('.store-checkbox:checked').length;
        if (count === 0) {
            showToast("⚠️ Bạn chưa chọn cửa hàng nào để từ chối.", false);
            return;
        }
        $('#bulkRejectStoreModal').modal('show');
    });

    // ===== BULK APPROVE STORE =====
    document.getElementById('confirmBulkApproveStoreBtn').addEventListener('click', async function () {
        const ids = Array.from(document.querySelectorAll('.store-checkbox:checked')).map(cb => cb.value);
        let allSuccess = true;

        for (const id of ids) {
            const res = await fetch(`/Admin/Store/Approve?id=${id}`, { method: 'POST' });
            const data = await res.json();
            showToast(data.message, data.success);
            if (!data.success) allSuccess = false;
        }

        $('#bulkApproveStoreModal').modal('hide');
        if (allSuccess) setTimeout(() => location.reload(), 1500);
    });

    // ===== BULK REJECT STORE =====
    document.getElementById('confirmBulkRejectStoreBtn').addEventListener('click', async function () {
        const ids = Array.from(document.querySelectorAll('.store-checkbox:checked')).map(cb => cb.value);
        let allSuccess = true;

        for (const id of ids) {
            const res = await fetch(`/Admin/Store/Reject?id=${id}`, { method: 'POST' });
            const data = await res.json();
            showToast(data.message, data.success);
            if (!data.success) allSuccess = false;
        }

        $('#bulkRejectStoreModal').modal('hide');
        if (allSuccess) setTimeout(() => location.reload(), 1500);
    });


    $('.close').on('click', function () {
        $('#imageModal').modal('hide');
    });
</script>