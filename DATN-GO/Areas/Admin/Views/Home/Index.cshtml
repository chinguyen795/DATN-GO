@{
    ViewData["Title"] = "Home Page";
}


<div class="container-fluid mt-5 pt-4">
    <!-- Date Filter Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">Lọc theo thời gian</h5>
            <div class="row g-3">
                <div class="col-md-4">
                    <label for="startDate" class="form-label">Từ ngày</label>
                    <input type="date" class="form-control" id="startDate">
                </div>
                <div class="col-md-4">
                    <label for="endDate" class="form-label">Đến ngày</label>
                    <input type="date" class="form-control" id="endDate">
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button class="btn btn-danger" onclick="filterStats()">
                        <i class="bi bi-funnel me-2"></i>Lọc
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4">
        <!-- Total Shops Card -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="text-muted mb-2">Tổng số cửa hàng</h6>
                            <h3 class="mb-0" id="totalShops">0</h3>
                        </div>
                        <div class="bg-danger bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-shop text-white fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-success">
                            <i class="bi bi-arrow-up"></i> 12%
                        </span>
                        <span class="text-muted ms-2">So với tháng trước</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Products Card -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="text-muted mb-2">Tổng số sản phẩm</h6>
                            <h3 class="mb-0" id="totalProducts">0</h3>
                        </div>
                        <div class="bg-danger bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-box-seam text-white fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-success">
                            <i class="bi bi-arrow-up"></i> 8%
                        </span>
                        <span class="text-muted ms-2">So với tháng trước</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Revenue Card -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="text-muted mb-2">Doanh thu cửa hàng</h6>
                            <div class="mt-2">
                                <div class="mb-3">
                                    <label class="text-muted">Doanh thu gốc:</label>
                                    <h4 class="mb-0" id="originalShopRevenue">0 ₫</h4>
                                </div>
                                <div>
                                    <label class="text-muted">Doanh thu sau phí (98%):</label>
                                    <h4 class="mb-0" id="discountedShopRevenue">0 ₫</h4>
                                </div>
                                <small class="text-muted d-block mt-2">Phí nền tảng (2%): <span id="platformFee">0 ₫</span></small>
                            </div>
                        </div>
                        <div class="bg-danger bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-currency-dollar text-white fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-success">
                            <i class="bi bi-arrow-up"></i> 15%
                        </span>
                        <span class="text-muted ms-2">So với tháng trước</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Revenue Chart -->
    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h5 class="card-title">Biểu đồ doanh thu</h5>
            <canvas id="revenueChart"></canvas>
        </div>
    </div>
</div>
